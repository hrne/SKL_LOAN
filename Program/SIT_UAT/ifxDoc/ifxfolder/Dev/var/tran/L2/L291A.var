!---------- TXFORM = L291A ----------
<sub type="FORM" name="L291A">

!#SCRPRT=_,_,S
!C(5,#TXFORM,L291A,$,S)

#SCRTIL=_,_,S
T(3,[L291A] 共同借款人限額查詢)

#OCustNo=A,7,L
E(0,#CustNo)

!以主要戶號申報聯徵
#OJcicMiainCustFlag=X,1,L
#OJcicMiainCustFlagX=X,5,L
T(H,#OJcicMiainCustFlag,#YNHelp)


!------ TOM(OCCURS) Variables (FOR OUTPUT SCREEN) ------
#LOOP=X,1,S
T(3,1)ASGN(LOOP$)


#OOApplNo=A,7,O

#OOCustNo=A,7,O

#OOFacmNo=A,3,O
#OOCustNoX=X,11,O
T(2,#OOCustNo+-+#OOFacmNo)

#OOCustName=x,100,O

#OOCaseNo=A,7,O

#OODeadline=D,7,O


!幣別
#OOCurrencyCode=X,3,O

#OOPrecision=N,1,S
E(0,0)T(H,#OOCurrencyCode,#CurrPrecisionHelp)
!核准額度-因目前預設為新台幣為了讓occurs金額欄位比較好看故使用14(OOUtilAmt14)欄位,如後面開放外幣則使用X(OOUtilAmtX)欄位
!核准金額
#OOLineAmt=m,14.2,O
#OOLineAmtX=X,22,L
CALL2(#ADJUSTDOT,#OOPrecision,#OOLineAmt,#OOLineAmtX)
P(R,#OOLineAmtX)
#OOLineAmt14=m,14,L
E(0,#OOLineAmt)

!已動用額度餘額
#OOUtilBal=m,14.2,O
#OOUtilBalX=X,22,L
CALL2(#ADJUSTDOT,#OOPrecision,#OOUtilBal,#OOUtilBalX)
P(R,#OOUtilBalX)
#OOUtilBal14=m,14,L
E(0,#OOUtilBal)

!目前餘額
#OOUtilAmt=m,14.2,O
#OOUtilAmtX=X,22,L
CALL2(#ADJUSTDOT,#OOPrecision,#OOUtilAmt,#OOUtilAmtX)
P(R,#OOUtilAmtX)
#OOUtilAmt14=m,14,L
E(0,#OOUtilAmt)

!是否合併申報
#OOJcicMergeFlag=X,1,O

!循環動用
#OORecycleCode=X,1,O

! #LimitFlag=X,1,O

! #OOBUF1=X,10,S
! T(2,#OOMainCustNo+#OOMainFacmNo)
! #OOBTN1=X,1,S
! C(5,#LimitFlag,C,BIND(grid,{ cmd=CHAIN; ntxcd=L2017; ntxbuf=#OOBUF1}),BIND(grid,cancel))


</sub>



!---------- AP TEXT AREA Variables ----------

!刪除隱藏重新交易按鈕
#AGAIN=X,1,S
E(0,1)ASGN(AGAIN$)

#FdNone=X,2,L
#FdRelCode=X,2,L
T(2,*)

#CHAIN=A,1,S
T(4,CHAIN$)
IF(#CHAIN!=1,V(P,此為連動交易，請從交易:L2022進入),$)
C(2,#CHAIN,$,T(F,@FunCode,0))


#NTXBUF=x,350,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)
T(1,@CreditSysNo,#NTXBUF,1,7)
T(1,@CustNo,#NTXBUF,8,7)
T(1,@FacmNo,#NTXBUF,15,3)
T(1,@CustName,#NTXBUF,18,100)
T(1,@RelUKey,#NTXBUF,118,32)
T(1,@RelId,#NTXBUF,150,10)
T(1,@RelName,#NTXBUF,160,100)
T(1,@Type,#NTXBUF,260,50)

!自動更新L2022機制
#AutoReFresh=A,1,S
C(3,#CHAIN,1,$,S)
E(0,1)
ASGN(CAUTO$)

<include src="HELPRIM.icf::HELPRIM.rtn"/>

#xxr99code=x,11,S
T(3,CdGuarantor)

#RelCodeHelp=x,3000,S

#HelpRim=X,1,S
RESET_RIM(#HelpRim,XXR99)
S(XXR99,01,#xxr99code)
R(1,XXR99)
CALL(#HelpProc)
T(2,@RelCodeHelp,#HelpDesc1)

#CreditSysNo=X,7,L

#CustNo=X,7,L

#FacmNo=X,3,L

#CustName=x,2.50,L

#RelUKey=x,32,L

#RelId=x,10,L

#RelName=x,2.50,L

#Type=X,50,L

#RelCode=X,2,I
HELP(#RelCodeHelp)
@V(H,#RelCodeHelp)

#RelCodeX=x,30,L
T(H,#RelCode,#RelCodeHelp)

</sub>



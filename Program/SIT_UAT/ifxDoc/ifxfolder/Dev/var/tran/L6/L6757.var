!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="p1" layout="cols=1;screen.width=[150,850];printer.width=[20,20];">
[
["[L6757]                                 業績件數及金額核算標準設定(整月)"],
["#FdFuncCode+功能",#FuncCodeX],
["#FdWorkMonth+複製工作月",#WorkMonth],
["#FdWorkMonth+刪除工作月",#WorkMonthD],
["#FdTargetWorkMonth+工作月",#TargetWorkMonth],
]
!---------- AP Button AREA ----------
![Buttom資料查詢]
!#BUF1=X,42,S
#FdFuncCode=X,1,L
#FdWorkMonth=X,1,L
#FdTargetWorkMonth=X,1,L
T(2,*)
!---------- AP TEXT AREA Variables ----------
<include src="HELPRIM.icf::HELPRIM.rtn"/>

!FuncCode2(1:新增;2:修改;4:刪除)
#CODEFuncCode2=x,20,S                  
T(3,CdCode.FunctionCd)                  
#FuncCode2Help=x,50,S

#HelpRim=X,1,S
RESET_RIM(#HelpRim,XXR99)
S(XXR99,01,#CODEFuncCode2)
R(1,XXR99)
CALL(#HelpProc)
T(2,@FuncCode2Help,#HelpDesc1)

#CHAIN=A,1,S
T(4,CHAIN$)
!T(2,@RimTxCode,#TXCD)
IF(#CHAIN!=1,V(P,此為連動交易，請從交易[L6084 業績件數及金額核算標準查詢]進入),$)

#NTXBUF=X,6,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)

C(3,#CHAIN,1,T(2,@FuncCode,#NTXBUF,1,1))
C(3,#CHAIN,1,T(1,@WorkMonth,#NTXBUF,2,5))
C(3,#CHAIN,1,T(1,@WorkMonthD,#NTXBUF,2,5))
C(3,#FuncCode,4,INVOKEJS(SHOW,p1,2,2,0)INVOKEJS(SHOW,p1,4,4,0),INVOKEJS(SHOW,p1,3,3,0))

C(2,#FuncCode,$,K(MODIFYBUTTON,新增),K(MODIFYBUTTON,修改),K(MODIFYBUTTON,新增),K(MODIFYBUTTON,刪除),K(MODIFYBUTTON,顯示詳細資料))

! 功能(1:新增;2:修改;4:刪除)
#FuncCode=A,1,S
T(F,@FuncCode,0)
C(3,#CHAIN,1,s,$)
HELP(#FuncCode2Help)
@V(H,#FuncCode2Help)
E(0,@FUNCIND,#FuncCode)

#FuncCodeX=X,12,L
T(H,#FuncCode,#FuncCode2Help)

!刪除隱藏重新交易按鈕
#AGAIN=X,1,S
C(3,#FuncCode,1,S,$)
E(0,1)ASGN(AGAIN$)

! 工作月
#WorkMonth=A,5,L
@A(YM13,1,#WorkMonth)
#WorkMonthD=A,5,L
! 目標工作月
#TargetWorkMonth=A,5,I
C(3,#FuncCode,3,$,S)
@A(YM13,1,#TargetWorkMonth)
IF(#WorkMonth == #TargetWorkMonth ,V(P,原工作月與目標工作月不可相同),$)
#RPTFG=A,1,S
E(0,0)

</sub>


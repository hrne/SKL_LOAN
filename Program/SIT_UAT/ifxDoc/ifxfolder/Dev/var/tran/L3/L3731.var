[
["[L3731]                                    呆帳戶改呆帳結案戶"],
[#<->#,"#FdCustNo+借戶戶號",#CustNo,"@@",#CustNoX],
[#<->#,"#FdFacmNo+額度編號",#FacmNo],
[#<->#,"#FdBormNo+撥款序號",#BormNo],
[#<->#,"#FdSupervisor+核決主管",#Supervisor,#BTN1,#SupervisorX],

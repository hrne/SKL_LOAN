T(F,@CreditBalance,0)T(F,@PerPeriordAmt,0)T(F,@LastPayAmt,0)T(F,@LastPayDate,0)
T(F,@OutstandAmt,0)T(F,@RepayPerMonDay,0)T(F,@ContractStartYM,0)T(F,@ContractEndYM,0)

!---------- BASIC LABEL Variables ----------
<sub type="SYS">
#KeyInq=X,1,S
K(MODIFYBUTTON,查詢)
</sub>

<sub type="SYS" name="label">
!#TXCD
!T(3,L5975)

![資料表頭(HEADER)長度]
#INQHD=n,3,S
E(0,0)ASGN(INQHD$)

![每筆資料明細(OCCURS)長度]
#INQLEN=n,3,S
E(0,339)ASGN(INQLEN$)

![多筆查詢之一個畫面有N筆資料]
#INQREC=n,2,S
E(0,40)ASGN(INQREC$)

![畫面顯示的明細間的高度]
#LOOPH=n,3,S
E(0,1)ASGN(LOOPHEIGHT$)

![每張印錄單列印的筆數]
#INQPRT=n,2,S
E(0,40)ASGN(INQPRT$)

</sub>

<sub type="DC" name="BFHEAD">
<include src="COM.icf::BFHEAD.dec"/>
!起始交易記號  0:起始交易,1:非起始交易
#ORGFG=_,_,S
E(0,0)

</sub>

!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="L5975" layout="cols=1;screen.width=[150,850];printer.width=[20,80];order=1">
[
["[L5975]                                 最大債權撥付統計查詢"],
[#<->#,"#FdBringUpDate+提兌日",#BringUpDate],
[#<->#,"#FdSelect+選項",#Select,#SelectX],
]

#FdBringUpDate=X,1,L
T(3,*)
#FdSelect=X,1,L
T(3,*)

#SelectHelp=x,100,S
T(3,1:債權銀行;2:資料傳送單位)

#CHAIN=A,1,S
T(4,CHAIN$) 

#NTXBUF=X,3,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)

#POSINTDT=D,8,S
T(4,DATE$)

! 提兌日
#BringUpDate=D,7,I
E(0,#POSINTDT)
D(8)
@V(7)A(DATE,0,#BringUpDate)

#OBringUpDate=D,7,L
T(2,#BringUpDate)
D(8)

!選項
#Select=A,1,I
HELP(#SelectHelp) 
@T(3,@SelectX,)
V(H,#SelectHelp)

#SelectX=X,12,L
T(H,#Select,#SelectHelp)

#OSelect=A,1,L
E(0,#Select)

#OSelectX=X,12,L
T(2,#SelectX)

#RPTFG=A,1,S


</sub>

!---------- 輸出共用變數宣告區 ----------
<sub type="RTN" name="AFXMT">
<include src="PRT.icf::PRTHEAD.rtn"/>
</sub>

!------------ TXFORM = L5975 -----------
<sub type="FORM" name="L5975">

#SCRTIL=_,_,S
!T(3,[L5975] 最大債權撥付統計查詢)
IF(#Select==1,T(3,[L5975] 最大債權撥付-債權銀行統計表),T(3,[L5975] 最大債權撥付-資料傳送單位統計表))

#LOOP=X,1,S
E(0,1)ASGN(LOOP$)
! 債權機構
#OOFinCode=X,8,O

! 債權機構名稱
#OOFinCodeName=X,100,O

!總金額
#OOAmt=m,14,O

!總筆數
#OOCnt=X,8,O
</sub>

!------ 上行電文 TEXT ------
<sub type="TIM">
#BringUpDate
#Select
</sub>

!------ 下行電文TOM ------
<sub type="TOM">
<include src="COM.icf::TRCTL.tom"/>
TXFORM=L5975
#OOFinCode
#OOFinCodeName
#OOAmt
#OOCnt
^
</sub>


!---------- 單據輸出組合 ----------
<sub type="PART" name="L5975" layout="cols=1;screen.width=[130,870];order=1;">
[
["[L5975]@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@最大債權撥付統計查詢@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@"],
[#<->#,"提兌日",#OBringUpDate],
[#<->#,"選項",#OSelect,#OSelectX],
]
</sub>

<sub type="SELECT">
#RPTFG=0,QUERY.GRID,L5975
#any={detail:true, header:'L5975.part', caption:'', width:1020, rowNum:20, rowList:[20,40,60]}


<sub type="RTN" name="AFXMT">
<include src="PRT.icf::PRTHEAD.rtn"/>
</sub>

!------------ TXFORM = L5071 -----------
<sub type="FORM" name="L5071">
#SCRTIL=_,_,S
T(3,[L5071] 債權案件明細表)
!------ TOM(HEAD)   Variables (FOR OUTPUT SCREEN) ------
! #CustId=_,_,S
! T(2,#CustId)
! #CaseKindCode=_,_,S
! T(2,#CaseKindCode)
! #CustLoanKind=_,_,S
! T(2,#CustLoanKind)
! #Status=_,_,S
! T(2,#Status)


!------ TOM(OCCURS) Variables (FOR OUTPUT SCREEN) ------
! #LOOP=X,1,S
!E(0,1)ASGN(LOOP$)
#LOOP=X,1,S
T(3,1)ASGN(LOOP$)

! 身分證字號
#OOCustId=X,10,O

! 案件種類
#OOCaseKindCode=X,1,O
#OOCaseKindCodeX=X,4,O
T(2,其他)
T(H,#OOCaseKindCode,#CaseKindCodeHelp)

! 債權戶別
#OOCustLoanKind=X,1,S
#OOCustLoanKindX=X,6,S
T(H,#OOCustLoanKind,#CustLoanKindHelp)

! 債權戶況
#OOStatus=X,1,O

#OOStatusX=X,6,S
IF(#OOStatus=="",S,$)
T(H,#OOStatus,#StatusHelp)

! 戶號
#OOCustNo=A,7,O

! 案件序號
#OOCaseSeq=A,3,O

! 協商申請日
#OOApplDate=D,7,O

! 期款
#OODueAmt=m,14,O

! 期數
#OOTotalPeriod=A,3,O

! 計息條件
!#OOIntRate=m,2.4,O
#OOIntRate=m,2.2,O
#OOIntRateX=X,7,O
X(#OOIntRate)
#OOIntRateX1=X,8,O
T(B,#OOIntRateX+%)

! 首次應繳日
#OOFirstDueDate=D,7,O

! 還款結束日
#OOLastDueDate=D,7,O

! 是否為最大債權
#OOIsMainFin=X,1,O

! (新壽)簽約總金額
#OOTotalContrAmt=m,14,O

! 最大債權機構
#OOMainFinCode=X,8,O

! 最大債權機構名稱
#OOMainFinCodeName=X,100,O

! 01:新增 A;  
! 02:修改 B;  
! 04:刪除 C;  
! 05:查詢 D;  
! 06:註銷債權 E;  
! 07:設定毀諾 F;  
! 08:取消毀諾 G;
! 09:變更還款條件 H;
! 10:喘息期 I;
! 11:二階段新增 J

! 交易Key值=身分證號(10)+戶號(7)+案件序號(3)
#BufKey=X,20,S
T(2,#OOCustId+#OOCustNo+#OOCaseSeq)
! 05:查詢
#OOBufSearch=X,22,S
T(2,05+#BufKey)

#OOBtnSearch=X,1,O
BIND(grid,{ cmd=CHAIN; ntxcd=L5701; ntxbuf=#OOBufSearch})

! 02:維護
#OOBufMaintain=X,22,S
T(2,02+#BufKey)
#OOBtnMaintain=X,1,O
BIND(grid,{ cmd=CHAIN; ntxcd=L5701; ntxbuf=#OOBufMaintain})
IF (#OOStatus=="0"||#OOStatus==4,S,$)
BIND(grid,cancel)

! 04:刪除
#OOBufDelete=X,22,S
T(2,04+#BufKey)
#OOBtnDelete=X,1,O
BIND(grid,{ cmd=CHAIN; ntxcd=L5701; ntxbuf=#OOBufDelete})

! 交易明細
#BufDetail=X,22,S
T(2,05+#BufKey)
#OOBtnDeatail=X,1,S
BIND(grid,{ cmd=CHAIN; ntxcd=L5971; ntxbuf=#BufDetail})

</sub>


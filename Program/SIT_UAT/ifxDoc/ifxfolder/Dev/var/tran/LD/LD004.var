#inputTitaTxtNoStart=N,8,I

#inputTitaTxtNoEnd=N,8,I
@V(5,#inputTitaTxtNoStart,99999999)
V(2,0)

#inputOption=N,1,I
HELP(1:還本收據;2:繳息收據)
@V(1,1,2)

</sub>



]

!---------- AP TEXT AREA Variables ----------
#CHAIN=A,1,S
T(4,CHAIN$)

! #NTXBUF=X,3,S
! C(3,#CHAIN,1,T(4,NTXBUF$),S)
! T(1,@FUNCD,#NTXBUF,1,1)
! T(1,@TLR,#NTXBUF,2,2)
! T(2,@FKEY,7)


!-----------------------------------------------------

#TXCD2=X,5,S
T(3,LD004)

#inputAcDate=D,7,I

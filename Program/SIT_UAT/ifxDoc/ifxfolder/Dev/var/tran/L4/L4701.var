["[L4701]@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@票據媒體製作"],
[#<->#,"#FdEntryDate+收票日",#EntryDate,],
] 

#FdEntryDate=X,2,L

#CHAIN=A,1,S
T(4,CHAIN$) 

! 收票日

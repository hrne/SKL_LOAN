!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="L4001" layout="cols=1;screen.width=[130,870];printer.width=[20,80];order=1">
[
["[L4001]@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@撥款退款彙總查詢"],
[#<->#,"#FdAcDateFrom+會計日期",#AcDateFrom,"-",#AcDateTo],
]

#FdAcDateFrom=X,2,L
T(3,*)

! Help
<include src="HELPRIM.icf::HELPRIM.rtn"/>

![撥款方式]
#CDDEF01=x,26,S
T(3,CdCode.DrawdownCode2)

#DrawdownCodeHelp=x,1024,S 

![狀態]
#CDDEF02=x,30,S
T(3,CdCode.DrawdownStatus)

#StatusCodeHelp=x,1024,S

#HelpRim=X,1,S
RESET_RIM(#HelpRim,XXR99)
S(XXR99,01,#CDDEF01,#CDDEF02)
R(1,XXR99)
CALL(#HelpProc) 
T(2,@DrawdownCodeHelp,#HelpDesc1)
T(2,@StatusCodeHelp,#HelpDesc2)

#CHAIN=A,1,S
T(4,CHAIN$) 

#NTXBUF=X,12,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)
T(1,@AcDateFrom,#NTXBUF,1,7)
T(1,@AcDateTo,#NTXBUF,8,7)
INVOKEJS(SHOW,p1,02,02,1)

#PER_VALUE=A,1,S
E(0,@AcDateFrom,#SYSDATE)
E(0,@AcDateTo,#SYSDATE)

#TmpDateFrom=A,7,S
#TmpDateTo=A,7,S

! 會計日期起日
#AcDateFrom=D,7,I
@A(DATE,0,#AcDateFrom)
E(0,#TmpDateFrom,#AcDateFrom)
C(3,#TmpDateFrom,0,V(P,日期不可為0),$)

#AcDateFrom2=D,7,L
E(0,#AcDateFrom)

! 會計日期迄日
#AcDateTo=D,7,I
E(0,#AcDateFrom)
@A(DATE,0,#AcDateTo)
E(0,#TmpDateTo,#AcDateTo)
C(3,#TmpDateTo,0,V(P,日期不可為0),$)
IF(#TmpDateTo<#TmpDateFrom,V(P,迄日不可小於起日),$)

#AcDateTo2=D,7,L
E(0,#AcDateTo)

#RPTFG=A,1,S
</sub>

!---------- 輸出共用變數宣告區 ----------
<sub type="RTN" name="AFXMT">
<include src="PRT.icf::PRTHEAD.rtn"/>
</sub>

!------------ TXFORM = L4001 -----------
<sub type="FORM" name="L4001">
#SCRTIL=_,_,S
T(3,[L4001] 撥款匯款彙總)
#LOOP=X,1,S
E(0,1)ASGN(LOOP$)
#OOAcDate=D,07,O

#OOBatchNo=X,6,O

#OODrawdownCode=A,2,O

#OODrawdownCode2=N,2,O
E(0,#OODrawdownCode)

#OODrawdownCode3=X,2,O
P(L,#OODrawdownCode2)

! 01:整批匯款        
! 02:單筆匯款        
! 04:退款台新(存款憑條)  
! 05:退款他行(整批匯款)  
! 11:退款新光(存款憑條)
#OODrawdownCodeX=X,23,O
T(3,)T(H,#OODrawdownCode,#DrawdownCodeHelp)T(B,#OODrawdownCode3+-+#OODrawdownCodeX)

#OOStatusCode=A,1,O

#OOStatusCodeX=X,16,O
T(3,)T(H,#OOStatusCode,#StatusCodeHelp)

#OOCount=m,6,O

#OOCurName=X,3,O

#OORemitAmt=m,14.2,O

! <明細> 1+7+6+2+1
#OOBUFA=X,17,S
T(2,2+#OOAcDate+#OOBatchNo+#OODrawdownCode+#OOStatusCode)
#OOBTNA=A,2,O
BIND(grid,{ cmd=CHAIN; ntxcd=L4901; ntxbuf=#OOBUFA})

</sub>


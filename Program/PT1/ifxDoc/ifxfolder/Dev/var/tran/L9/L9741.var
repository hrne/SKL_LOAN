![Buttom資料查詢]
! 功能 必須輸入(1: 新增;2: 修改;4: 刪除;5: 查詢)
#FUNCIND=_,_,S
E(0,5)
<include src="COM.icf::CheckAuth.rtn"/>

#FdInsuYearMonth=X,2,L
T(3,*)
#FdCustNo=X,2,L
T(3, )
#FdSearchOption=X,2,L
T(3, )

!---------- AP TEXT AREA Variables ----------

#CHAIN=A,1,S
T(4,CHAIN$)

#DT1=D,8,S
T(4,DATE$)

#DT2=D,7,S
T(1,#DT1,2,7)

#DT_YM=A,5,S
T(1,#DT1,2,5)

! 前個月
#FORE_MONTH=D,8,S
D(7,3,#SYSDATE,1,0)

!查詢選項
#SearchOptionHelp=x,100,S
T(3,1:正常未繳;2:借支;3:催收未繳;9:全部)


! 火險到期年月
#InsuYearMonth=A,5,I
C(3,#CHAIN,0,$,s)
T(1,@InsuYearMonth,#FORE_MONTH,2,5)
@A(YM,1,#InsuYearMonth)

!戶號
#CustNo=A,7,I
!@V(2,0)


! 查詢選項
#SearchOption=A,1,I
C(3,#CHAIN,0,$,s)
E(0,9)  
HELP(#SearchOptionHelp)
@V(H,#SearchOptionHelp)

#SearchOptionX=X,8,L
T(3,)T(H,#SearchOption,#SearchOptionHelp)

</sub>


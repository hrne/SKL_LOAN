]
!---------- AP Button AREA ----------
![Buttom資料查詢]
! 功能 必須輸入(1: 新增;2: 修改;4: 刪除;5: 查詢)
#FUNCIND=_,_,S
E(0,5)
<include src="COM.icf::CheckAuth.rtn"/>

! 必輸欄位
##loop{times:7,i:1}
#R{i}=X,1,L
INVOKEJS(SHOW,#R{i},0)
K(LIGHT,#R{i},TXTRED,0)
##end

! 永遠為必輸欄位
#ALWAYS_HIGHLIGHT=@,1,S
T(3,@R1,*)
T(3,@R2,*)
T(3,@R3,*)
T(3,@R4,*)
T(3,@R5,*)
T(3,@R6,*)
T(3,@R7,*)

#FdMsg=X,1,L
#Msg=x,20.100,L
K(LIGHT,#Msg,TXTRED,0)
INVOKEJS(SHOW,p1,8,8,0)

!---------- AP TEXT AREA Variables ----------
<include src="HELPRIM.icf::HELPRIM.rtn"/>

!Condition1
#CDCODECondition1=x,20,S                  
T(3,CdCode.Condition1)                  
                                      
#Condition1Help=x,100,S        

!Condition2
#CDCODECondition2=x,20,S                  
T(3,CdCode.Condition2)                  
                                        
#Condition2Help=x,100,S        

!CustType
#CDCODECustType=x,20,S                  
T(3,CdCode.CustType)                  
                                         
#CustTypeHelp=x,50,S   

!CorpInd
#CDCODECorpInd=x,20,S                  
T(3,CdCode.CorpInd)                  
                                         
#CorpIndHelp=x,50,S  

!Apno
#CDCODEApno=x,20,S                  
T(3,CdCode.Apno)                  
                                         
#ApnoHelp=x,100,S  
    
#HelpRim=X,1,S
RESET_RIM(#HelpRim,XXR99)
S(XXR99,01,#CDCODECondition1,#CDCODECondition2,#CDCODECustType,#CDCODECorpInd,#CDCODEApno)
R(1,XXR99)
CALL(#HelpProc)
T(2,@Condition1Help,0:+全部;+#HelpDesc1)
T(2,@Condition2Help,0:+全部;+#HelpDesc2)
T(2,@CustTypeHelp,0:+全部;+#HelpDesc3)
T(2,@CorpIndHelp,#HelpDesc4)
T(2,@ApnoHelp,0:+全部;+#HelpDesc5)

#CHAIN=A,1,S
T(4,CHAIN$)

#INIT=X,1,S
CALL(#ALWAYS_HIGHLIGHT)

#DT1=D,8,S
T(4,DATE$)

#DT2=D,7,S
T(1,#DT1,2,7)

#DT_YM=A,5,S
T(1,#DT1,2,5)

!會計日期 必須輸入，不可大於本營業日
#ACCTDATE_ST=D,7,I
T(2,#DT_YM+01)
@V(7)
V(5,0,#DT2)
A(DATE,0,#ACCTDATE_ST)

#ACCTDATE_ED=D,7,I
T(2,#DT2)
@V(7)
V(5,#ACCTDATE_ST,#DT2)
A(DATE,0,#ACCTDATE_ED)

!戶號
#CUSTNO=A,7,I
@V(2,0)

#CUSTNOB=A,7,S
E(0,#CUSTNO)

!選擇條件一
#CONDITION1=A,1,I
HELP(#Condition1Help)
@T(3,@CONDITION1X,)
V(H,#Condition1Help)

#CONDITION1X=X,12,L
T(H,#CONDITION1,#Condition1Help)

!選擇條件二
#CONDITION2=A,1,I
HELP(#Condition2Help)
@T(3,@CONDITION2X,)
V(H,#Condition2Help)

#CONDITION2X=X,12,L
T(H,#CONDITION2,#Condition2Help)

!戶別
#ID_TYPE=A,1,I
HELP(#CustTypeHelp)
@T(3,@ID_TYPEX,)
V(H,#CustTypeHelp)

#ID_TYPEX=X,6,L
T(H,#ID_TYPE,#CustTypeHelp)

!企金別
#CORP_IND=A,1,I
HELP(#CorpIndHelp)
@T(3,@CORP_INDX,)
V(H,#CorpIndHelp)

#CORP_INDX=X,8,L
T(H,#CORP_IND,#CorpIndHelp)

!業務科目
#APNO=A,1,I
HELP(#ApnoHelp)
@T(3,@APNOX,)
V(H,#ApnoHelp)

#APNOX=X,12,L
T(H,#APNO,#ApnoHelp)

<include src="ROM.icf::L1R20.dec"/>

#CustNo=A,7,S
E(0,#CUSTNO)

#FacmNo=A,3,S
E(0,0)

#FormNo=x,10,S
T(3,L9705)

#RimFlag=A,1,S

#L1R20Rim2=X,1,S
C(3,#CustNo,0,S,$)
RESET_RIM(#L1R20Rim2,L1R20)
E(0,@RimFlag,0)
S(L1R20,01,#CustNo,#FacmNo,#FormNo,#RimFlag)
R(1,L1R20)
T(2,@Msg,#L1R20Msg)

#ShowMsg=A,1,S
C(3,#CustNo,0,E(0,0),C(4,#Msg,E(0,0),E(0,1)))
INVOKEJS(SHOW,p1,8,8,#ShowMsg)

</sub>


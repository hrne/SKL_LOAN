!---------- AP Button AREA ----------
![Buttom資料查詢]
#BTN1=X,15,I,ui:button;value:顧客資料查詢;enable:1;tabbable:0


!必輸欄位
#FdEMPNM=X,2,L
#FdNO0=X,2,L


!永遠為必輸欄位
#FdFUNCD=X,2,L
#FdCUSTNO=X,2,L
#FdNO1=X,2,L
T(3,*)
#FdNO2=X,2,L
T(3,*)
!---------- AP TEXT AREA Variables ----------
<include src="HELPRIM.icf::HELPRIM.rtn"/>

#SetSysPar=X,1,S
C(3,#FunCd,1,S,$)
E(0,1)ASGN(AGAIN$)

#FunCdHelp=x,50,S
T(3,1:新增;2:修改;4:刪除;5:查詢)

!RmkCode
#CDDEF0001=x,20,S
T(3,CdCode.LoanRmkCode)

#RmkCodeHelp=x,1024,S

#HelpRim=X,1,S
RESET_RIM(#HelpRim,XXR99)
S(XXR99,01,#CDDEF0001)
R(1,XXR99)
CALL(#HelpProc)
T(2,@RmkCodeHelp,#HelpDesc1)

#CHAIN=A,1,S
T(4,CHAIN$)
IF(#CHAIN!=1,V(P,此為連動交易，請從交易:[L3072帳務備忘錄明細資料查詢]進入),$)

#NTXBUF=X,156,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)
T(1,@FunCd,#NTXBUF,1,1)
T(1,@CustNo,#NTXBUF,2,7)
T(1,@EmpName,#NTXBUF,9,10)
T(1,@RmkNo,#NTXBUF,19,3)
T(1,@RmkCode,#NTXBUF,22,3)
T(1,@RmkDesc,#NTXBUF,25,120),$)


![功能]
!下拉式選單 1.新增 2.修改 4.刪除 5.查詢
#FunCd=A,1,S
C(3,#CHAIN,1,s,$)
HELP(#FunCdHelp)
@V(H,#FunCdHelp)
E(0,@FUNCIND,#FunCd)

#FunCdX=X,4,L
C(4,#FunCd,S,$)
T(H,#FunCd,#FunCdHelp)
C(2,#FunCd,$,K(MODIFYBUTTON,新增),K(MODIFYBUTTON,修改),K(MODIFYBUTTON,新增),K(MODIFYBUTTON,刪除),K(MODIFYBUTTON,查詢)K(NOBUTTON,CLOSEY))
C(3,#FunCd,5,K(NOBUTTON,CLOSEY),$)
#WKSPC=X,2,L

#ShowFd=X,1,S
C(2,#FunCd,T(3, ),T(3,*),T(3,*),T(3,*),T(3, ),T(3, ))
T(2,@FdNO1,#ShowFd)
T(2,@FdNO2,#ShowFd)


#WKSTAR=X,2,L
C(2,#FunCd,S,T(3,*),S,S,S,S)
T(2,@FdCUSTNO,#ShowFd)

#WKSTAR1=X,2,L
C(2,#FunCd,S,S,T(3,*),S,T(3, ),T(3, ))



#WKTF=X,1,S
IF(#FunCd==1 || #FunCd==2,T(F,@RmkCode,1),T(F,@RmkCode,0)T(F,@RmkDesc,0))
IF(#FunCd==2,T(F,@CustNo,0)HIDE(#BTN1),$)
IF(#FunCd==1,T(F,@RmkNo,0),T(F,@RmkNo,0))
IF(#FunCd==4 || #FunCd==5,HIDE(#BTN1)T(F,@CustNo,0)T(F,@RmkNo,0),$ )


#BUF1=X,18,S


#BIND1=X,1,S
BIND(#BTN1,click, {cmd=CHAIN; ntxcd=L1001; ntxbuf=#BUF1;ntxbuf5=type<-1:CustNo<-OOCustNo})

![借戶戶號]
!按[瀏覽]連結[顧客明細資料查詢] 必須輸入且存在於顧客檔
#CustNo=A,7,I
C(3,#CHAIN,1,C(3,#FunCd,1,$,s),$)
@V(2,0)

#CUSTID=X,10,S
@C(4,#CUSTID,S,$)
A(ID_UNINO,0,#CUSTID)

!調RIM參數
#RimCustId=X,10,S
#RimFunCd=A,1,S
#RimCustNo=A,7,S

<include src="ROM.icf::L1R01.dec"/>
!調RIML1R01取CustName
#RimL1r01=X,1,S
E(0,@RimFunCd,5)
E(0,@RimCustNo,#CustNo)
RESET_RIM(#RimL1r01,L1R01)
S(L1R01,1,#RimCustId,#RimFunCd,#RimCustNo)
R(1,L1R01)


#checkL1R01=X,1,S
T(2,@CustName,#L1r01CustName)

#CustName=X,100,L



![經辦編號]
#TlrNo=X,6,S
T(4,TLRNO$)

![經辦姓名]
!自動顯示不必輸入
#EmpName=X,10,L
T(4,EMPNM$)




!調RIM參數
#RimRmkNo=A,3,S
#RimOtxDate=D,7,S

<include src="ROM.icf::L3R30.dec"/>
!調RIML3R30備忘錄序號
#RimL3r30=X,1,S
C(3,#FunCd,1,$,S)
E(0,@RimFunCd,1)
E(0,@RimCustNo,#CustNo)
E(0,@RimRmkNo,0)
RESET_RIM(#RimL3r30,L3R30)
S(L3R30,1,#RimFunCd,#RimCustNo,#RimRmkNo)
R(1,L3R30)

#checkL3r30RmkNo=X,1,S
C(3,#FunCd,1,$,S)
E(0,@RmkNo,#L3r30RmkNo)


![備忘錄序號]
!新增時由系統自動編流水號,其他則必須輸入
#RmkNo=A,3,L


!調RIML3R30
#RimL3r30find=X,1,S
C(3,#FunCd,1,S,$)
E(0,@RimFunCd,5)
E(0,@RimCustNo,#CustNo)
E(0,@RimRmkNo,#RmkNo)
RESET_RIM(#RimL3r30find,L3R30)
S(L3R30,1,#RimFunCd,#RimCustNo,#RimRmkNo)
R(1,L3R30)

#checkL3r30=X,1,S
C(3,#FunCd,1,S,$)
E(0,@RmkCode,#L3r30RmkCode)
T(2,@RmkDesc,#L3r30RmkDesc)



![備忘錄代碼]
!必須輸入
#RmkCode=A,3,I
C(3,#FunCd,4,s,$)
C(3,#FunCd,5,s,$)
C(3,#CHAIN,1,C(3,#FunCd,4,s,$),$)
C(3,#CHAIN,1,C(3,#FunCd,5,s,$),$)
HELP(#RmkCodeHelp)
@V(H,#RmkCodeHelp)


#RmkCodeX=c,120,L
T(H,#RmkCode,#RmkCodeHelp)


![備忘錄說明]
!新增、修改時備忘錄代碼若為其他則此欄必須輸入,其他則自動顯示不必輸入
!2022.3.18 QC1698皆必須輸入
!#RmkDesc=c,120,I
#RmkDesc=x,10.50,I
TOOLTIP(Shift+Enter換行，Enter跳一下欄位)
C(3,#FunCd,4,s,$)
C(3,#FunCd,5,s,$)
C(4,#RmkDesc,T(2,@RmkDesc,#RmkCodeX),$)
!T(2,#RmkDesc,#RmkCodeX)
!IF(#RmkCode == 999, T(F,@RmkDesc,1)T(2,@FdNO2,*), T(F,@RmkDesc,0)T(2,@FdNO2,))
!C(3,#RmkCode,999,$,S)
@V(7)


#RPTFG=A,1,S




</sub>


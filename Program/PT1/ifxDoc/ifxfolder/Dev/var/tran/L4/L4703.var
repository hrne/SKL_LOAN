!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="L4703" layout="cols=1;screen.width=[130,870];printer.width=[20,80];order=1">
[
["[L4703]@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@產生滯繳通知單"],
[#<->#,"#FdFunctionCodeX+功能",#FunctionCode,#FunctionCodeX],
[#<->#,"#FdCustNo+戶號",#CustNo,"-",#FacmNo,#BTNA],
[#<->#,"#FdRepayCode+繳款方式",#RepayCode,#RepayCodeX],
[#<->#,"#FdNoticeFlag+通知方式",#NoticeFlag,#NoticeFlagX],
[#<->#,"#FdAcDate+會計日",#AcDate],
[#<->#,"#FdEntryDate+入帳日",#EntryDate],
[#<->#,"#FdPayIntDate+最近繳款日",#PayIntDateSt,"~",#PayIntDateEd],
[#<->#,"#FdUnpaidDay+滯繳日數",#UnpaidDaySt,"~",#UnpaidDayEd],
[#<->#,"#FdMsg+注意事項",#Msg],
]

#FdFunctionCodeX=X,2,L
#FdCustNo=X,2,L
T(3,*)
#FdRepayCode=X,2,L
T(3,*)
#FdNoticeFlag=X,2,L
T(3,*)
#FdAcDate=X,2,L
T(3,*)
#FdEntryDate=X,2,L
T(3,*)
#FdPayIntDate=X,2,L
T(3,*)
#FdUnpaidDay=X,2,L


#FdMsg=X,1,L
#Msg=x,20.100,L
K(LIGHT,#Msg,TXTRED,0)
INVOKEJS(SHOW,L4703,9,9,0)

#BTNA=X,1,I,ui:button;value:額度明細查詢;enable:1;tabbable:0

<include src="HELPRIM.icf::HELPRIM.rtn"/>
! 通知方式
#CDDEF01=x,50,S
T(3,CdCode.NoticeFlag)

#NoticeFlagHelp=x,1024,S

#HelpRim=X,1,S
RESET_RIM(#HelpRim,XXR99)
S(XXR99,01,#CDDEF01)
R(1,XXR99)
CALL(#HelpProc)
T(2,@NoticeFlagHelp,#HelpDesc1)

!功能
#FunctionHelp=x,20,S
T(3,1:個別列印;2:整批列印)

!本交易限1,2,3,9
#RepayCodeHelp=x,50,S
T(3,1:匯款轉帳;2:銀行扣款;3:員工扣薪;9:全部)

#CHAIN=A,1,S
T(4,CHAIN$) 

#NTXBUF=X,100,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)
T(1,@L6001Code,#NTXBUF,1,1)

! 從外部點入，且值為9為整批
#L6001Code=A,1,S
C(3,#CHAIN,0,s,$)
C(3,#L6001Code,9,$,s)
E(0,@FunctionCode,2)
HIDE(#FunctionCode)

! 收票日
#OENTRYDATE=D,7,O
T(1,#SYSDATE,2,7)

! 下一營業日
#NEXT_DATE=D,8,S
T(4,NBSDY$)

! 版面配置
#COLDIS=A,1,S

#RimDate=D,8,S

#L4R32Rim=X,1,S
RESET_RIM(#L4R32Rim,L4R32)
E(0,@RimDate,DATE$)
S(L4R32,01,#RimDate)
R(1,L4R32)


! 功能
#FunctionCode=A,1,I
C(3,#CHAIN,0,E(0,1),s)
HELP(#FunctionHelp)
@V(H,#FunctionHelp)
E(0,@UnpaidDaySt,7)
E(0,@UnpaidDayEd,30)

#FunctionCodeX=X,8,L
T(3,)T(H,#FunctionCode,#FunctionHelp)
!SWITCH(#FunctionCode,1,T(2,個別列印),
!                   2,T(2,整批列印))

#ColDisplay=A,1,S
C(3,#FunctionCode,2,INVOKEJS(SHOW,L4703,2,4,0),INVOKEJS(SHOW,L4703,2,4,1))

!<瀏覽>
#BUFA=X,18,S
T(3,00000009999999000)
#BINDA=X,1,S
BIND(#BTNA,click, {cmd=CHAIN; ntxcd=L2015; ntxbuf=#BUFA;ntxbuf5=type<-1:FacmNo<-OOFacmNo:CustNo<-OOCustNo})

! 戶號
#CustNo=A,7,I
C(3,#FunctionCode,1,$,S)
@V(2,0)

#FacmNo=A,3,I
C(3,#FunctionCode,1,$,S)
@V(2,0)



! 繳款方式
#RepayCode=A,1,I
C(3,#FunctionCode,1,$,S)
E(0,9) 
HELP(#RepayCodeHelp)
@V(H,#RepayCodeHelp)
!HELP(1:匯款轉帳;
!2:銀行扣款;
!3:員工扣薪;
!9:全部)
!@V(1,1,2,3,9)

#RepayCodeX=X,10,L
T(3,)T(H,#RepayCode,#RepayCodeHelp)
!SWITCH(#RepayCode,1,T(2,匯款轉帳),
!2,T(2,銀行扣款),
!3,T(2,員工扣薪),
!9,T(2,全部))

! 通知方式
#NoticeFlag=A,1,I
C(3,#FunctionCode,1,$,S)
E(0,1)
HELP(#NoticeFlagHelp)
@V(H,#NoticeFlagHelp)
!HELP(1:書面通知;       
!2:簡訊通知;       
!3:電子郵件)

#NoticeFlagX=X,10,L
T(3,)T(H,#NoticeFlag,#NoticeFlagHelp)
!SWITCH(#NoticeFlag,1,T(2,書面通知),       
!2,T(2,簡訊通知),       
!3,T(2,電子郵件))


<include src="ROM.icf::L1R20.dec"/>
<include src="ROM.icf::L4R32.dec"/>
#FormNo=x,10,S
T(3,L9703)



#AcDate=D,7,I
E(0,#L4R32Date1)
@A(DATE,0,#AcDate)
V(7)


#EntryDate=D,7,I
E(0,#L4R32Date2)
@A(DATE,0,#EntryDate)
V(7)


#PayIntDateSt=D,7,I
E(0,#L4R32Date7)
@A(DATE,0,#PayIntDateSt)
@V(7)

#PayIntDateEd=D,7,I
E(0,#L4R32Date7)
@A(DATE,0,#PayIntDateEd)
@V(7)

!滯繳日數
!起
#UnpaidDaySt=A,3,L
!止
#UnpaidDayEd=A,3,L

#RimFlag=A,1,S

#L1R20Rim2=X,1,S
C(3,#CustNo,0,S,$)
RESET_RIM(#L1R20Rim2,L1R20)
E(0,@RimFlag,0)
S(L1R20,01,#CustNo,#FacmNo,#FormNo,#RimFlag)
R(1,L1R20)
T(2,@Msg,#L1R20Msg)

#ShowMsg=A,1,S
C(3,#CustNo,0,E(0,0),C(4,#Msg,E(0,0),E(0,1)))
INVOKEJS(SHOW,L4703,9,9,#ShowMsg)

#MRKEY=_,_,S
C(3,#CustNo,0,S,T(2,#CustNo+-+#FacmNo))

</sub>


#BIND_BAN1=X,1,S
BIND(#BTN_BAN1,click, {cmd=CALLSEND;DOCODE=HIDEBAN})

SHOW(#PieceCode0)

#PieceCode0=X,1,I
C(2,#FuncCode,$,$,$,$,s,s)
HELP(#ApHelp,cols:2)
@T(3,@PieceCodex0,)

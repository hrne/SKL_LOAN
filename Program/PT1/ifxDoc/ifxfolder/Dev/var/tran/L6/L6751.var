##loop {times:19,i:1,j:0,k:4}

#AmtStartRange{i}=m,14,I
!E(0,#AmtEndRange{j})
!C(3,#AmtStartRange{j},0,HIDE(#AmtStartRange{i},#sign{i},#AmtEndRange{i},#Bonus{i}),SHOW(#AmtStartRange{i},#sign{i},#AmtEndRange{i},#Bonus{i}))

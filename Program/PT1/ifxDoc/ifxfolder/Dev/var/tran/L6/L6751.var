C(2,#FuncCode,$,$,$,$,s,s)
HELP(#ApHelp,cols:2)
@T(3,@PieceCodex{i},)
C(4,#PieceCode{i},S,V(H,#ApHelp))
C(4,#PieceCode{i},HIDE(#PieceCode{i}),SHOW(#PieceCode{i}))
   
#PieceCodex{i}=X,10,L
C(4,#PieceCode{j},HIDE(#PieceCodex{i}),SHOW(#PieceCodex{i}))

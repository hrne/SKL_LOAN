<sub type="DC" name="p1" layout="cols=1;screen.width=[200,850];printer.width=[20,20];">
[
["[L6891]                                 管制代碼檔維護"],
["#FdRuleCode+規定管制項目代碼",#RuleCode],
["#FdRuleCodeItem+規定管制項目中文",#RuleCodeItem],
["#FdRmkItem+備註",#RmkItem],
["#FdRuleStDate+管制生效日",#RuleStDate],
["#FdRuleEdDate+管制取消日",#RuleEdDate],
["#FdEnableMark+是否啟用",#EnableMark,#EnableMarkX],
]
!---------- AP Button AREA ----------
![Buttom資料查詢]


!---------- AP TEXT AREA Variables ----------

#EnableMarkHelp=x,20,S
T(3,Y:啟用;N:停用)


#FdRuleCode=X,2,L
#FdRuleCodeItem=X,2,L
#FdRmkItem=X,2,L
#FdRuleStDate=X,2,L
#FdRuleEdDate=X,2,L
#FdEnableMark=X,2,L

#CHAIN=A,1,S
T(4,CHAIN$) 

#NTXBUF=X,100,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)
T(1,@FunCode,#NTXBUF,1,1)
T(1,@RuleCode,#NTXBUF,2,5)
T(1,@RuleCodeItem,#NTXBUF,7,30)
T(1,@RmkItem,#NTXBUF,37,30)
T(1,@RuleStDate,#NTXBUF,67,7)
T(1,@RuleEdDate,#NTXBUF,74,7)
T(1,@EnableMark,#NTXBUF,81,1)

! 功能
#FunCode=X,1,S
C(2,#FunCode,$,K(MODIFYBUTTON,新增),K(MODIFYBUTTON,修改),K(MODIFYBUTTON,新增),K(MODIFYBUTTON,刪除),K(MODIFYBUTTON,查詢))

! 新增進入
#Deal_New=X,1,S
C(5,#FunCode,1,$,S)
T(2,@FdRuleCode,*)


! 異動進入
#Deal_Update=X,1,S
C(5,#FunCode,2,$,S)
T(F,@RuleCode,0)

! 刪除進入
#Deal_Delete=X,1,S
C(5,#FunCode,4,$,S)
T(F,@RuleCode,0)T(F,@RuleCodeItem,0)T(F,@RmkItem,0)
T(F,@RuleStDate,0)T(F,@RuleEdDate,0)T(F,@EnableMark,0)


! 查詢進入
#Deal_Search=X,1,S
C(5,#FunCode,5,$,S)
T(F,@RuleCode,0)T(F,@RuleCodeItem,0)T(F,@RmkItem,0)
T(F,@RuleStDate,0)T(F,@RuleEdDate,0)T(F,@EnableMark,0)
K(NOBUTTON,CLOSEY)

#RuleCode=X,5,I
C(5,#FunCode,2,s,$)
C(5,#FunCode,4,s,$)
C(5,#FunCode,5,s,$)
@
V(7)
C(4,#RuleCode,V(P,不可空白),$)

#RuleCodeItem=X,30,I
C(5,#FunCode,4,s,$)
C(5,#FunCode,5,s,$)


#RmkItem=X,30,I
C(5,#FunCode,4,s,$)
C(5,#FunCode,5,s,$)

#RuleStDate=D,7,I
C(5,#FunCode,4,s,$)
C(5,#FunCode,5,s,$)

#RuleEdDate=D,7,I
C(5,#FunCode,4,s,$)
C(5,#FunCode,5,s,$)

#EnableMark=X,1,I
C(5,#FunCode,4,s,$)
C(5,#FunCode,5,s,$)
HELP(#EnableMarkHelp)
@V(H,#EnableMarkHelp)


#EnableMarkX=X,4,L
T(H,#EnableMark,#EnableMarkHelp)

!刪除隱藏重新交易按鈕
#AGAIN=X,1,S
E(0,1)
ASGN(AGAIN$)

</sub>


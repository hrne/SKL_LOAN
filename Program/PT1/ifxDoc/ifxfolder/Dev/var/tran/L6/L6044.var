!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="p1" layout="cols=1;screen.width=[150,850];printer.width=[20,20];">
[
["[L6044]                                 主管授權紀錄查詢"],
["#FdDate+查詢條件","會計日期、交易日期，擇一輸入"],
["#FdEntdy+．會計日期",#EntdyS,#EntdyE],
["#FdEntdy+．交易日期",#TxDateS,#TxDateE],
["#FdSupNo+授權主管編號",#SupNo],
]
!---------- AP Button AREA ----------
![Buttom資料查詢]
!#BTN1=X,15,I,ui:button;value:新增授權主管編號;enable:1;tabbable:0;title:L6608 主管授權紀錄維護
!#BUF1=X,42,S

!---------- AP TEXT AREA Variables ----------
#CHAIN=A,1,S
T(4,CHAIN$) 

#NTXBUF=X,13,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)

#FdDate=X,2,L
T(3,*)
#FdEntdy=X,2,L
!C(3,#CHAIN,1,T(3, ),T(3,*))

#FdSupNo=X,2,L
!C(3,#CHAIN,1,T(3, ),T(3, ))

! 顯示框線
#WKTF=X,1,S
IF (#CHAIN==1 ,T(F,@Entdy,0)T(F,@SupNo,0),
               T(F,@Entdy,1)T(F,@SupNo,1))

#button=x,100,S
K(MODIFYBUTTON,查詢)

!會計日期
#DATE=D,8,S
T(4,DATE$)
#DT=D,7,S
T(1,#DATE,2,7)

!日曆日
#CDATE=D,8,S
T(4,CDATE$)
#CDT=D,7,S
T(1,#CDATE,2,7)


#EntdyS=D,7,I
C(3,#CHAIN,1,T(1,#NTXBUF,1,7),$)
T(2,#DT)
@A(4,0,#EntdyS)
C(3,#EntdyS,0,S,A(4,0,#EntdyS))

#EntdyE=D,7,I
C(3,#CHAIN,1,T(1,#NTXBUF,1,7),$)
C(3,#EntdyS,0,S,$)
E(0,#EntdyS)
@A(4,0,#EntdyE)V(5,#EntdyS,#DT)

#TxDateS=D,7,I
C(3,#EntdyS,0,$,S)
E(0,#CDT)
@A(4,0,#TxDateS)


#TxDateE=D,7,I
C(3,#EntdyS,0,$,S)
E(0,#TxDateS)
@A(4,0,#TxDateE)V(5,#TxDateS,#CDT)

#CheckDate=X,1,S
C(3,#EntdyS,0,$,s)
C(3,#TxDateS,0,$,s)
V(P,會計日期、交易日期，擇一輸入)


!授權主管編號
#SupNo=X,6,I
C(3,#CHAIN,1,T(1,#NTXBUF,8,6),$)

#RPTFG=A,1,S
E(0,0)

</sub>


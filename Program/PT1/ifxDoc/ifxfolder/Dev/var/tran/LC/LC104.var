!---------- AP Button AREA ----------
![Buttom資料查詢]
!---------- AP TEXT AREA Variables ----------
<include src="HELPRIM.icf::HELPRIM.rtn"/>

#FdTranNo=X,2,L
#FdCustNo=X,2,L
#FdMrKey=X,2,L
#FdNote=X,2,L
#FdRBUTTON_FLD=X,2,L
#FdTypeItem=X,2,L
T(3,*)

#FdDesc=X,2,L

#FunCode=A,1,S

!加入常用類別
#BTNAdd=X,15,O,ui:button;value:加入常用類別;enable:1;tabbable:0;

!設定按下按鈕後執行call PTOTRP
#BINDAdd=X,1,S
!BIND(#BTNAdd,click, {cmd=CALLSEND;DOCODE=DOAdd;GOFILED=Desc})
BIND(#BTNAdd,click, {cmd=CALLSEND;DOCODE=DOAdd})

#DOAdd=@,1,S
RESET_RIM(#DOAdd,LCR08)
E(0,@FunCode,1)
S(LCR08,1,#FunCode,#TranNo,#TypeItem)
R(1,LCR08)
ALERT(已成功加入常用附件類別)


!從常用類別移除
#BTNSub=X,15,O,ui:button;value:從常用類別移除;enable:1;tabbable:0;

!設定按下按鈕後執行call PTOTRP
#BINDSub=X,1,S
!BIND(#BTNSub,click, {cmd=CALLSEND;DOCODE=DOSub;GOFILED=Desc})
BIND(#BTNSub,click, {cmd=CALLSEND;DOCODE=DOSub})

#DOSub=@,1,S
RESET_RIM(#DOSub,LCR08)
E(0,@FunCode,2)
S(LCR08,1,#FunCode,#TranNo,#TypeItem)
R(1,LCR08)
ALERT(已成功從常用附件類別移除)


![一般數值 multiple:true 可上傳多個檔案]
#BUTTON_FLD=X,1,O,ui:button;value:瀏覽;enable:1;tabbable:1;file:true;multiple:false;fieldName:#FileItem;width:600

#FileItem=x,1000,S

#CHAIN=A,1,S
T(4,CHAIN$)
IF(#CHAIN!=1,V(P,此為連動交易，請從LC014入口交易進入),$)


#NTXBUF=X,300,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)
T(1,@TranNo,#NTXBUF,1,5)
T(1,@CustNo,#NTXBUF,6,7)
T(1,@FacmNo,#NTXBUF,13,3)
T(1,@BormNo,#NTXBUF,16,3)
T(1,@MrKey,#NTXBUF,19,100)
T(1,@Note,#NTXBUF,119,100)
T(1,@FromTranNo,#NTXBUF,219,5)

#FromTranNo=x,5,L

!自動更新LC014機制
#AutoReFresh=A,1,S
C(3,#CHAIN,1,$,S)
C(5,#FromTranNo,LC014,$,S)
E(0,1)
ASGN(CAUTO$)

!交易代號
#TranNo=X,5,L

!戶號
#CustNo=A,7,L
#FacmNo=A,3,L
#BormNo=A,3,L

#MrKey=x,100,L
#Note=x,100,L

#MRKEY=_,_,S
C(3,#CustNo,0,S,T(2,#CustNo+-+#FacmNo+-+#BormNo))

#HelpCode=x,17,S                  
T(2,TxAttachType+#TranNo)                  

#TypeItemHelp=x,10240,S

#HelpRim=X,1,S
RESET_RIM(#HelpRim,XXR99)
S(XXR99,01,#HelpCode)
R(1,XXR99)
CALL(#HelpProc)
T(2,@TypeItemHelp,#HelpDesc1)

!附件類別
#TypeItem=x,50,I
C(4,#TypeItemHelp,$,HELP(#TypeItemHelp))
@
V(7)

!備註
#Desc=x,100,I
@
C(4,#FileItem,V(P,請上傳附件),$)

#Chk=X,1,S

#RPTFG=A,1,S

</sub>


<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

	<!-- 作業名稱 -->
	<job id="dailyRptFlow" parent="parentJob"
		xmlns="http://www.springframework.org/schema/batch">
		<!-- 日報批次 -->
		<split id="dailyRptSplit" task-executor="taskExecutor">

			<!-- LD003 放款明細餘額總表(日) -->
			<flow>
				<step id="sLD003" parent="parentStep">
					<tasklet ref="LD003" />
				</step>
			</flow>

			<!-- LW003 房貸獎勵費用率統計表(週) -->
			<flow>
				<step id="sLW003" parent="parentStep">
					<tasklet ref="LW003" />
				</step>
			</flow>

			<!-- LB204 聯徵每日新增授信及清償資料檔(日) -->
			<flow>
				<step id="sLB204" parent="parentStep">
					<tasklet ref="LB204" />
				</step>
			</flow>

			<!-- LB211 聯徵每日授信餘額變動資料檔(日) -->
			<flow>
				<step id="sLB211" parent="parentStep">
					<tasklet ref="LB211" />
				</step>
			</flow>
		</split>
	</job>
</beans>
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

	<!-- 作業名稱 -->
	<job id="dailyRptFlow" parent="parentJob"
		xmlns="http://www.springframework.org/schema/batch">
		<!-- 日報批次 -->
		<split id="dailyRptSplit" task-executor="taskExecutor">

			<!-- LD003 放款明細餘額總表(日) -->
			<flow>
				<step id="sLD003" parent="parentStep">
					<tasklet ref="LD003" />
				</step>
			</flow>
			<!-- L9742(原LD004) 企金戶還本收據及繳息收據 -->
			<flow>
				<step id="sL9742Batch" parent="parentStep">
					<tasklet ref="L9742Batch" />
				</step>
			</flow>
			<!-- L9743(原LD005)暫收支票收據列印(個人戶) -->
			<flow>
				<step id="sL9743Batch" parent="parentStep">
					<tasklet ref="L9743Batch" />
				</step>
			</flow>

			<!-- L9746(原LD010) 介紹人換算業績報酬檢核表 -->
			<flow>
				<step id="sL9746Batch" parent="parentStep">
					<tasklet ref="L9746Batch" />
				</step>
			</flow>
			<!-- L9137 (原LD008) 放款餘額總表 -->
			<flow>
				<step id="sL9137Batch" parent="parentStep">
					<tasklet ref="L9137Batch" />
				</step>
			</flow>
			<!-- L9138 (原LD009) 放款授信日報表 -->
			<flow>
				<step id="sL9138Batch" parent="parentStep">
					<tasklet ref="L9138Batch" />
				</step>
			</flow>

			<flow>
				<step id="sLW003" parent="parentStep">
					<tasklet ref="LW003" />
				</step>
			</flow>
			<flow>
				<step id="sLB204" parent="parentStep">
					<tasklet ref="LB204" />
				</step>
			</flow>
			<flow>
				<step id="sLB211" parent="parentStep">
					<tasklet ref="LB211" />
				</step>
			</flow>
		</split>
	</job>
</beans>
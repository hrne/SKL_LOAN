<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

	<!-- 作業名稱 -->
	<job id="eodFlow" parent="parentJob"
		xmlns="http://www.springframework.org/schema/batch">
		<!-- Usp_Tx_TxHoliday_Ins -->
		<step id="txTxHolidayUpd" parent="parentStep">
			<tasklet ref="TxTxHolidayUpd" />
			<next on="COMPLETED" to="l6CdEmpIns" />
			<end on="FAILED" />
		</step>
		<step id="l6CdEmpIns" parent="parentStep">
			<tasklet ref="L6CdEmpIns" />
			<next on="COMPLETED" to="l6CdBcmIns" />
			<end on="FAILED" />
		</step>
		<step id="l6CdBcmIns" parent="parentStep">
			<tasklet ref="L6CdBcmIns" />
			<next on="COMPLETED" to="l6QuitEmpIns" />
			<end on="FAILED" />
		</step>
		<step id="l6QuitEmpIns" parent="parentStep">
			<tasklet ref="L6QuitEmpIns" />
			<next on="COMPLETED" to="l6CdStockIns" />
			<end on="FAILED" />
		</step>
		<step id="l6CdStockIns" parent="parentStep">
			<tasklet ref="L6CdStockIns" />
			<next on="COMPLETED" to="l2CustDataCtrlIns" />
			<end on="FAILED" />
		</step>
		<!-- Usp_L2_CustDataCtrl_Ins -->
		<step id="l2CustDataCtrlIns" parent="parentStep">
			<tasklet ref="L2CustDataCtrlIns" />
			<next on="COMPLETED" to="l5CollListUpd" />
			<end on="FAILED" />
		</step>
		<!-- Usp_L5_CollList_Upd -->
		<step id="l5CollListUpd" parent="parentStep">
			<tasklet ref="L5CollListUpd" />
			<next on="COMPLETED" to="l9DailyLoanBalUpd" />
			<end on="FAILED" />
		</step>
		<!-- Usp_L9_DailyLoanBal_Upd -->
		<step id="l9DailyLoanBalUpd" parent="parentStep">
			<tasklet ref="L9DailyLoanBalUpd" />
			<next on="COMPLETED" to="l9DailyTavIns" />
			<end on="FAILED" />
		</step>
		<!-- Usp_L9_DailyTav_Ins -->
		<step id="l9DailyTavIns" parent="parentStep">
			<tasklet ref="L9DailyTavIns" />
			<next on="COMPLETED" to="insertAmlCustList" />
			<end on="FAILED" />
		</step>
		<!-- InsertAmlCustList -->
		<step id="insertAmlCustList" parent="parentStep">
			<tasklet ref="InsertAmlCustList" />
			<next on="COMPLETED" to="split2" />
			<end on="FAILED" />
		</step>
		<split id="split2" task-executor="taskExecutor"
			next="startBS996">
			<flow>
				<!-- Usp_L8_JcicB204_Upd -->
				<step id="l8JcicB204Upd" parent="parentStep">
					<tasklet ref="L8JcicB204Upd" />
				</step>
			</flow>
			<flow>
				<!-- Usp_L8_JcicB211_Upd -->
				<step id="l8JcicB211Upd" parent="parentStep">
					<tasklet ref="L8JcicB211Upd" />
				</step>
			</flow>
		</split>
		<!-- BS996 重新計算業績，更新業績明細檔 -->
		<step id="startBS996" parent="parentStep" next="startDailyRptFlow">
			<tasklet ref="StartBS996" />
		</step>
		<step id="startDailyRptFlow" parent="parentStep">
			<job ref="dailyRptFlow" job-launcher="jobLauncher" />
			<!-- 這個批次成功或失敗 都要往下跑 -->
			<next on="COMPLETED" to="l6972DailyBatch" />
			<next on="FAILED" to="l6972DailyBatch" />
		</step>
		<step id="l6972DailyBatch" parent="parentStep">
			<tasklet ref="L6972DailyBatch" />
			<!-- 這個批次成功或失敗 都要往下跑 -->
			<next on="COMPLETED" to="eodFinal" />
			<next on="FAILED" to="eodFinal" />
		</step>
		<!-- 每日批次結束，判斷是否需要執行月批 -->
		<step id="eodFinal" parent="parentStep">
			<tasklet ref="EodFinal" />
			<next on="COMPLETED" to="startEomFlow" />
			<next on="STOPPED" to="startDailyCopy" />
		</step>
		<step id="startEomFlow" parent="parentStep">
			<job ref="eomFlow" job-launcher="jobLauncher" />
			<!-- 這個批次成功或失敗 都要往下跑 -->
			<next on="COMPLETED" to="startDailyCopy" />
			<next on="FAILED" to="startDailyCopy" />
		</step>
		<!-- DailyCopy 每日資料庫複製 -->
		<step id="startDailyCopy" parent="parentStep">
			<tasklet ref="DailyCopy" />
		</step>
	</job>
</beans>
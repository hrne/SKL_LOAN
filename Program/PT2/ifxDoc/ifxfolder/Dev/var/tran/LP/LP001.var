!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="p1" layout="cols=1;screen.width=[140,850];printer.width=[20,80];">
[
["[LP001]                                  LP001工作月區域中心業績累計"],
["#FdWorkMonth+工作月",#WorkMonth],
]
!---------- AP TEXT AREA Variables ----------
#CHAIN=A,1,S
T(4,CHAIN$)
IF(#CHAIN!=1,V(P,此為連動交易，請從交易:[L9803月報]進入),$)

#NTXBUF=X,3,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)

!-----------------------------------------------------

! 工作月是否為必輸
#FdWorkMonth=X,2,L
T(3,*)

! 系統日
#RimDate=D,8,S
E(0,#SYSDATE)

! L9R01 : 傳入中曆日期,回傳中曆工作年月
#SendL9R01=X,1,S
RESET_RIM(#SendL9R01,L9R01)
S(L9R01,1,#RimDate)
R(1,L9R01)

! 工作月
#WorkMonth=A,5,I
C(3,#WorkMonth,0,E(0,@WorkMonth,#L9R01WorkMonth),$)
@
A(YM13,1,#WorkMonth)

<include src="ROM.icf::L9R01.dec"/>
</sub>



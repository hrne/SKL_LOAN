<sub type="FORM" name="L6069">

!#SCRPRT=_,_,S
!C(5,#TXFORM,L6069,$,S)

#SCRTIL=_,_,S
T(3,[L6069] 各類代碼檔)

!------ TOM(HEAD)   Variables (FOR OUTPUT SCREEN) ------

!------ TOM(OCCURS) Variables (FOR OUTPUT SCREEN) ------
#LOOP=X,1,S
T(3,1)ASGN(LOOP$)

!代碼
#OOCustNo=x,20,L

! 代碼檔代號(TOTA)
#OOCode=x,20,L

! 代碼類別說明(TOTA)
#OOItem=x,50,L

!代碼類別名稱
#OODefItem=x,50,L

! 業務類別(TOTA)
#OOType=A,2,L

#OOTypeX=x,50,L
T(H,#OOType,#DefTypeH)

#OOCHAIN=A,1,S
T(4,CHAIN$)

! 修改的按鈕
#OOFunc2=A,1,S
E(0,2)

#OOBUF2=x,63,S
T(2,#OOFunc2+#DefCode+#OOCode+#OODefItem)

! 連結時隱藏按鈕
#OOBTN2=X,4,S
BIND(grid,{cmd=CHAIN;ntxcd=L6604;text=修改;ntxbuf=#OOBUF2})
IF(#OOCHAIN==1,BIND(grid,cancel),$)

! 刪除的按鈕
#OOFunc4=A,1,S
E(0,4)

#OOBUF4=x,63,S
T(2,#OOFunc4+#DefCode+#OOCode+#OODefItem)

! 連結時隱藏按鈕
#OOBTN4=X,4,S
BIND(grid,{cmd=CHAIN;ntxcd=L6604;text=刪除;ntxbuf=#OOBUF4})
IF(#OOCHAIN==1,BIND(grid,cancel),$)

</sub>



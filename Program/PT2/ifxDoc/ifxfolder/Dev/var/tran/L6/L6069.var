!],
]
!---------- AP Button AREA ----------
![Buttom資料查詢]

!---------- AP TEXT AREA Variables ----------
<include src="HELPRIM.icf::HELPRIM.rtn"/>

#RPTFG=A,1,S
E(0,0)

!業務類別
#CDCODEMenuCode=x,20,S                  
T(3,CdCode.MenuCode)

#DefTypeH=x,1024,S

#HelpRim=X,1,S
RESET_RIM(#HelpRim,XXR99)
S(XXR99,01,#CDCODEMenuCode)
R(1,XXR99)
CALL(#HelpProc)
T(2,@DefTypeH,#HelpDesc1)

#CHAIN=A,1,S
T(4,CHAIN$) 
IF(#CHAIN!=1,V(P,此為連動交易，請從交易:L6064進入),$)

#NTXBUF=x,200,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)

#NTXBUF5=x,200,S
C(3,#CHAIN,1,T(4,NTXBUF5$),S)
T(1,@DefType,#NTXBUF,1,2)
T(1,@Code,#NTXBUF,3,20)
C(4,#NTXBUF5,E(0,@RPTFG2,1),E(0,@RPTFG2,2))

#button=x,100,S
T(2,{cmd=CHAIN; ntxcd=L6604; ntxbuf=1; ntxbuf5=type})ASGN(BTN_NEW1$)
K(MODIFYBUTTON,查詢)
C(3,#CHAIN,1,S,K(MODIFYBUTTON,1,新增代碼))

!代碼
#CustNo=X,20,L

!代碼檔編號
#DefNo=A,4,S
C(3,#CHAIN,1,s,$)


!業務類別
#DefType=X,2,I
HELP(#DefTypeH)
@C(4,#DefType,$,V(H,#DefTypeH))

#DefTypeX=x,20,L
C(4,#DefType,S,T(H,#DefType,#DefTypeH))

!代碼
#Code=x,20,I

!代碼檔名稱
#Item=X,80,I

#RPTFG2=A,1,S
C(3,#RPTFG,0,$,S)
C(4,#NTXBUF5,T(3,1),T(3,2))

#DefCode=x,20,S
T(3,CodeType)

</sub>


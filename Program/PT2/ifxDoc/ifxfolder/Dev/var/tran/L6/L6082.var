!---------- TXFORM = L6082 ----------
<sub type="FORM" name="L6082">

!#SCRPRT=_,_,S
!C(5,#TXFORM,L6082,$,S)

#SCRTIL=_,_,S
T(3,[L6082] 放款業績工作月)

!------ TOM(HEAD)   Variables (FOR OUTPUT SCREEN) ------

!------ TOM(OCCURS) Variables (FOR OUTPUT SCREEN) ------
#LOOP=X,1,S
T(3,1)ASGN(LOOP$)

! 業績年度(TOTA)
#OOYear=A,3,L

! 工作月份(TOTA)
!#OOMonth=A,2,L

! 開始日期(TOTA)
!#OOStartDate=D,7,L

!#OOStartDateX=D,8,S
!D(7,2,#OOStartDate,0,1)

! 終止日期(TOTA)
!#OOEndDate=D,7,L

!#OOEndDateX=D,8,S
!D(7,2,#OOEndDate,0,1)

! 修改的按鈕
#OOFunc2=A,1,S
E(0,2)

#OOBUF2=X,4,S
T(2,#OOFunc2+#OOYear)

#OOBTN2=X,4,S
BIND(grid,{cmd=CHAIN;ntxcd=L6752;text=修改;ntxbuf=#OOBUF2})

! 刪除的按鈕
#OOFunc4=A,1,S
E(0,4)

#OOBUF4=X,4,S
T(2,#OOFunc4+#OOYear)

#OOBTN4=X,4,S
IF(#OOYear<#CDATEX,BIND(grid,cancel),BIND(grid,{cmd=CHAIN;ntxcd=L6752;text=刪除;ntxbuf=#OOBUF4}))

! 查詢的按鈕
#OOBUF5=X,4,S
T(2,5+#OOYear)

#OOBTN5=X,4,S
BIND(grid,{cmd=CHAIN;ntxcd=L6752;text=查詢;ntxbuf=#OOBUF5})

</sub>


!---------- TXFORM = L6061 ----------
<sub type="FORM" name="L6061">

!#SCRPRT=_,_,S
!C(5,#TXFORM,L6061,$,S)

#SCRTIL=_,_,S
T(3,[L6061] 會計科子細目)

!------ TOM(HEAD)   Variables (FOR OUTPUT SCREEN) ------
!------ TOM(OCCURS) Variables (FOR OUTPUT SCREEN) ------
#LOOP=X,1,S
T(3,1)ASGN(LOOP$)

! 科子細目(TOTA)
#OOAcNoCode=X,11,S
#OOAcSubCode=X,5,S
#OOAcDtlCode=X,2,S
#OOAcNoCodeX=X,19,L
T(2,#OOAcNoCode+－+#OOAcSubCode+－+#OOAcDtlCode)

! 科子細目名稱(TOTA)
#OOAcNoItem=X,80,S

! 業務科目代號(TOTA)
#OOAcctCode=X,3,S
#OOAcctItem=X,40,L

! 科子目級別(TOTA)
#OOClassCode=A,1,S
#OOClassCodeX=X,10,L
C(2,#OOClassCode,T(3,可入帳科目),
                 T(3,下編子細目))

! 帳冊別(TOTA)
#OOAcBookFlag=A,1,S
#OOAcBookFlagX=X,6,L
C(2,#OOAcBookFlag,T(3,不細分),
                  T(3,細分),
                  T(3,中介))

! 借貸(TOTA)
#OODbCr=X,1,S
#OODbCrX=X,2,L
SWITCH(#OODbCr,D,T(3,借),
               C,T(3,貸))

! 業務科目記號(TOTA)
#OOAcctFlag=A,1,S
#OOAcctFlagX=X,12,L
C(2,#OOAcctFlag,T(3,一般科目),
                T(3,資負明細科目))

! 銷帳科目記號(TOTA)
#OOReceivableFlag=A,1,S
#OOReceivableFlagX=X,14,L
C(2,#OOReceivableFlag,T(3,非銷帳科目),
                      T(3,),
                      T(3,業務銷帳科目),T(3,),T(3,),T(3,),T(3,),T(3,),T(3,總帳銷帳碼科目))

! 日結餘額檢查(TOTA)
#OOClsChkFlag=A,1,S
#OOClsChkFlagX=X,12,L
C(2,#OOClsChkFlag,T(3,不檢查),
                  T(3,不過餘額),
                  T(3,應大於等於零),
                  T(3,應等於零),
                  T(3,應小於等於零))

! 使用記號(TOTA)
#OOInuseFlag=A,1,S
#OOInuseFlagX=X,12,L
C(2,#OOInuseFlag,T(3,可以使用),
                 T(3,不可使用))

#OOCHAIN=A,1,S
T(4,CHAIN$)

!最後修改人員&日期
#OOLastUpdate=x,20,S

#OOLastEmp=x,47,S

! 修改的按鈕
#OOFunc2=A,1,S
E(0,2)

#OOBUF2=X,20,S
T(2,#OOFunc2+#OOAcNoCode+#OOAcSubCode+#OOAcDtlCode)

! 連結時隱藏按鈕
#OOBTN2=X,4,S
BIND(grid,{cmd=CHAIN;ntxcd=L6601;text=修改;ntxbuf=#OOBUF2})
IF(#OOCHAIN==1,BIND(grid,cancel),$)

! 刪除的按鈕
#OOFunc4=A,1,S
E(0,4)

#OOBUF4=X,20,S
T(2,#OOFunc4+#OOAcNoCode+#OOAcSubCode+#OOAcDtlCode)

! 連結時隱藏按鈕
#OOBTN4=X,4,S
BIND(grid,{cmd=CHAIN;ntxcd=L6601;text=刪除;ntxbuf=#OOBUF4})
IF(#OOCHAIN==1,BIND(grid,cancel),$)

</sub>


!---------- AP Button AREA ----------
![Buttom資料查詢]
#BTN1=X,15,I,ui:button;value:顧客資料查詢;enable:1;tabbable:0

!永遠為必輸欄位
#FdFunCd=X,2,L
#FdCustNo=X,2,L
#FdRmkDescribe=X,2,L
T(3,*)
!---------- AP TEXT AREA Variables ----------
<include src="HELPRIM.icf::HELPRIM.rtn"/>

#SetSysPar=X,1,S
C(3,#FunCd,1,S,$)
E(0,1)ASGN(AGAIN$)

#FunCdHelp=x,50,S
T(3,1:新增;2:修改;4:刪除;5:查詢)

#CHAIN=A,1,S
T(4,CHAIN$)
IF(#CHAIN!=1,V(P,此為連動交易，請從交易:[L3074暫收款指定額度設定查詢]進入),$)

#NTXBUF=X,156,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)
T(1,@FunCd,#NTXBUF,1,1)
T(1,@CustNo,#NTXBUF,2,7)
T(1,@FacmNo,#NTXBUF,9,3)


![功能]
!下拉式選單 1.新增 2.修改 4.刪除
#FunCd=A,1,S
C(3,#CHAIN,1,s,$)
HELP(#FunCdHelp)
@V(H,#FunCdHelp)
E(0,@FUNCIND,#FunCd)

#FunCdX=X,4,L
C(4,#FunCd,S,$)
T(H,#FunCd,#FunCdHelp)
C(2,#FunCd,$,K(MODIFYBUTTON,新增),K(MODIFYBUTTON,修改),K(MODIFYBUTTON,新增),K(MODIFYBUTTON,刪除),K(NOBUTTON,CLOSEY))
C(3,#FunCd,5,K(NOBUTTON,CLOSEY),$)
#WKSPC=X,2,L

!1.新增2.修改4.刪除5.查詢擺空白
#ShowFd=X,1,S
C(2,#FunCd,T(3, ),T(3,*),T(3,*),T(3,*),T(3, ),T(3, ))
!T(2,@#FdRmkDescribe,#ShowFd)

!新增時顯示必輸記號*
#WKSTAR=X,2,L
C(2,#FunCd,S,T(3,*),S,S,S,S)
T(2,@FdCustNo,#WKSTAR)
T(2,@FdFacmNo,#WKSTAR)

#WKSTAR1=X,2,L
C(2,#FunCd,S,S,T(3,*),S,T(3, ),T(3, ))


#BUF1=X,18,S

#BIND1=X,1,S
BIND(#BTN1,click, {cmd=CHAIN; ntxcd=L1001; ntxbuf=#BUF1;ntxbuf5=type<-1:CustNo<-OOCustNo})

![借戶戶號]
!按[瀏覽]連結[顧客明細資料查詢] 必須輸入且存在於顧客檔
#CustNo=A,7,I
C(3,#CHAIN,1,C(3,#FunCd,1,$,s),$)
SHOW(#BTN1)
@V(2,0)

#CustId=X,10,S

!調RIM參數
#RimCustId=X,10,S
#RimFunCd=A,1,S
#RimCustNo=A,7,S
#RimFacmNo=A,3,S

<include src="ROM.icf::L1R01.dec"/>
!調RIML1R01取CustName
#RimL1r01=X,1,S
E(0,@RimFunCd,5)
E(0,@RimCustNo,#CustNo)
RESET_RIM(#RimL1r01,L1R01)
S(L1R01,1,#RimCustId,#RimFunCd,#RimCustNo,#RimFacmNo)
R(1,L1R01)
T(2,@CustName,#L1r01CustName)

#CustName=X,100,L

![額度編號]
#FdFacmNo=X,2,L
C(3,#CHAIN,1,s,$)

#FacmNo=A,3,I
C(3,#CHAIN,1,C(3,#FunCd,1,$,s),$)
@V(2,0)

!RIM檢查
!修改複製刪除查詢時使用
#RimL3R17SL=X,1,S
C(3,#FunCd,1,S,$)
E(0,@RimFunCd,5)
E(0,@RimCustNo,#CustNo)
E(0,@RimFacmNo,#FacmNo)
RESET_RIM(#RimL3R17SL,L3R17)
S(L3R17,1,#RimFunCd,#RimCustNo,#RimFacmNo)
R(1,L3R17)
T(2,@RmkDescribe,#L3r17RmkDescribe)

![設定理由]
!新增、修改時設定理由若為其他則此欄必須輸入,其他則自動顯示不必輸入
!2022.3.18 QC1698皆必須輸入
!#Describe=c,120,I
#RmkDescribe=x,10.50,I
TOOLTIP(Shift+Enter換行，Enter跳一下欄位)
C(3,#FunCd,4,s,$)
C(3,#FunCd,5,s,$)
@V(7)


#RPTFG=A,1,S



#MRKEY=_,_,S
T(2,#CustNo)



<include src="ROM.icf::L3R17.dec"/>
</sub>


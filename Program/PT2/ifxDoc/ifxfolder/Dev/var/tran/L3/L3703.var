!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="p1" layout="cols=1;screen.width=[155,1000];printer.width=[20,20];">
[
["[L3703]                                 帳務明細摘要維護"],
["#FdCustNo+借戶戶號",#CustNo,"-",#FacmNo,"-",#BormNo,"-",#BorxNo],
["#FdLoanNoteCode+摘要代碼",#LoanNoteCode],
["#FdRmkDesc+摘要",#Note,"Shift+Enter換行，Enter跳一下欄位"],
!["@@@@會計日期",#AcDate],
!["#FdEmpNm+建檔經辦",#EmpName],
]
!---------- AP Button AREA ----------
<include src="HELPRIM.icf::HELPRIM.rtn"/>

#CHAIN=A,1,S
T(4,CHAIN$)

#DT1=D,8,S
T(4,DATE$)

#DT2=D,7,S
T(1,#DT1,2,7)

#DT_YM=A,5,S
T(1,#DT1,2,5)

!LoanNoteCodeHelp 帳務摘要代碼
#CDDEF0001=x,25,S
T(3,CdCode.LoanNoteCode)

#LoanNoteCodeHelp=x,1024,S

#HelpRim=X,1,S
RESET_RIM(#HelpRim,XXR99)
S(XXR99,01,#CDDEF0001)
R(1,XXR99)
CALL(#HelpProc)
T(2,@LoanNoteCodeHelp,#HelpDesc1)


!會計日期
#AcDate=D,7,L
T(2,#DT2)
@V(7)A(DATE,0,#AcDate)
V(5,0,9999999)

#NTXBUF=X,517,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)
T(1,@CustNo,#NTXBUF,1,7)
T(1,@FacmNo,#NTXBUF,8,3)
T(1,@BormNo,#NTXBUF,11,3)
T(1,@BorxNo,#NTXBUF,14,4)




#RimL3r31S=X,1,S
E(0,@RimCustNo,#CustNo)
E(0,@RimFacmNo,#FacmNo)
E(0,@RimBormNo,#BormNo)
E(0,@RimBorxNo,#BorxNo)
S(L3R31,1,#RimCustNo,#RimFacmNo,#RimBormNo,#RimBorxNo)
R(1,L3R31)
T(2,@Note,#L3r31Note)



#FdCustNo=X,2,L

#RimCustNo=A,7,S
#RimFacmNo=A,3,S
#RimBormNo=A,3,S
#RimBorxNo=A,4,S
#RimNote=X,500,S

#CustNo=X,7,L
C(3,#CHAIN,1,s,$)
@C(4,#CustNo,s,$)

#FacmNo=X,3,L
C(3,#CHAIN,1,s,$)
C(3,#CustNo,0,S,$)
@C(4,#CustNo,s,$)

#BormNo=X,3,L
C(3,#CHAIN,1,s,$)
@C(4,#BormNo,s,$)

#BorxNo=X,4,L
C(3,#CHAIN,1,s,$)
@C(4,#BorxNo,s,$)

#FdLoanNoteCode=X,2,L
#LoanNoteCode=A,3,I
C(4,#Note,$,S)
HELP(#LoanNoteCodeHelp)
@C(4,#LoanNoteCode,S,V(H,#LoanNoteCodeHelp))

 
#FdRmkDesc=X,2,L

!#Note=x,10.50,I
#Note=c,5.50,I
C(3,#Note,1,s,$)
T(2,@Note,#Note)
C(4,#Note,C(4,#LoanNoteCode,$,T(H,#LoanNoteCode,#LoanNoteCodeHelp)),$)



#MRKEY=_,_,S
T(2,#CustNo)
C(3,#FacmNo,s,T(2,#CustNo+-+#FacmNo))
C(3,#BormNo,s,T(2,#CustNo+-+#FacmNo+-+#BormNo))



#AGAIN=X,1,S
C(3,#Note,1,S,$)
E(0,1)ASGN(AGAIN$)


</sub>


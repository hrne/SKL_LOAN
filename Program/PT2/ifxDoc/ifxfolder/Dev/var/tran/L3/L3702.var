#BTNNDate=X,15,I,ui:button;value:本日日期;enable:1;tabbable:0

#BINDNDate=X,1,S
BIND(#BTNNDate,click, {cmd=CALLSEND;DOCODE=NDate})

!必輸欄位
#FdEmpNm=X,2,L
#FdRmkNo=X,2,L


!永遠為必輸欄位
#FdFunCd=X,2,L
#FdCustNo=X,2,L
#FdRmkCode=X,2,L
#FdAcDate=X,2,L
#FdRmkDesc=X,2,L
T(3,*)
!---------- AP TEXT AREA Variables ----------
<include src="HELPRIM.icf::HELPRIM.rtn"/>

#SetSysPar=X,1,S
C(3,#FunCd,1,S,$)
E(0,1)ASGN(AGAIN$)

#FunCdHelp=x,50,S
T(3,1:新增;2:修改;3:複製;4:刪除;5:查詢)

!RmkCode
#CDDEF0001=x,20,S
T(3,CdCode.LoanRmkCode)

#RmkCodeHelp=x,1024,S

#HelpRim=X,1,S
RESET_RIM(#HelpRim,XXR99)
S(XXR99,01,#CDDEF0001)
R(1,XXR99)
CALL(#HelpProc)
T(2,@RmkCodeHelp,#HelpDesc1)

#CHAIN=A,1,S
T(4,CHAIN$)
IF(#CHAIN!=1,V(P,此為連動交易，請從交易:[L3072帳務備忘錄明細資料查詢]進入),$)

#NTXBUF=X,156,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)
T(1,@FunCd,#NTXBUF,1,1)
T(1,@CustNo,#NTXBUF,2,7)
T(1,@RmkNo,#NTXBUF,9,3)
T(1,@AcDate,#NTXBUF,12,7)


#RimL3r30S=X,1,S
C(3,#FunCd,1,S,$)
E(0,@RimFunCd,5)
E(0,@RimCustNo,#CustNo)
E(0,@RimRmkNo,#RmkNo)
E(0,@RimAcDate,#AcDate)
S(L3R30,1,#RimFunCd,#RimCustNo,#RimRmkNo,#RimAcDate)
R(1,L3R30)
T(2,@LoanRmkCode,#L3r30RmkCode)
T(2,@RmkDesc,#L3r30RmkDesc)
T(2,@RmkEmpNo,#L3r30LastUpdateEmpNo)
T(2,@RmkEmpNoName,#L3r30FullName)

![功能]
!下拉式選單 1.新增 2.修改 4.刪除 5.查詢
#FunCd=A,1,S
C(3,#FunCd,3,E(0,1),$)
C(3,#CHAIN,1,s,$)
HELP(#FunCdHelp)
@V(H,#FunCdHelp)
E(0,@FUNCIND,#FunCd)

#FunCdX=X,4,L
C(4,#FunCd,S,$)
T(H,#FunCd,#FunCdHelp)
C(2,#FunCd,$,K(MODIFYBUTTON,新增),K(MODIFYBUTTON,修改),K(MODIFYBUTTON,新增),K(MODIFYBUTTON,刪除),K(MODIFYBUTTON,查詢)K(NOBUTTON,CLOSEY))
C(3,#FunCd,5,K(NOBUTTON,CLOSEY),$)
C(3,#FunCd,2,HIDE(#BTNNDate),$)
C(3,#FunCd,4,HIDE(#BTNNDate),$)
C(3,#FunCd,5,HIDE(#BTNNDate),$)
#WKSPC=X,2,L

!1.新增2.修改3.複製上必輸記號* 4.刪除5.查詢擺空白
#ShowFd=X,1,S
C(2,#FunCd,T(3, ),T(3,*),T(3,*),T(3,*),T(3, ),T(3, ))
T(2,@FdRmkDesc,#ShowFd)
C(2,#FunCd,T(3,@Msg, ),T(3,@Msg,Shift+Enter換行，Enter跳一下欄位),T(3,@Msg,Shift+Enter換行，Enter跳一下欄位),T(3,@Msg,Shift+Enter換行，Enter跳一下欄位),T(3,@Msg, ),T(3,@Msg, ))



!新增時顯示必輸記號*
#WKSTAR=X,2,L
C(2,#FunCd,S,T(3,*),S,S,S,S)
T(2,@FdCustNo,#WKSTAR)
T(2,@FdAcDate,#WKSTAR)

#WKSTAR1=X,2,L
C(2,#FunCd,S,S,T(3,*),S,T(3, ),T(3, ))

#WKTF=X,1,S
IF(#FunCd==1 || #FunCd==2,T(F,@LoanRmkCode,1),T(F,@LoanRmkCode,0)T(F,@RmkDesc,0))
IF(#FunCd==2,T(F,@CustNo,0)T(F,@AcDate,0)HIDE(#BTN1),$)
IF(#FunCd==1,T(F,@RmkNo,0),T(F,@RmkNo,0))
IF(#FunCd==4 || #FunCd==5,HIDE(#BTN1)T(F,@CustNo,0)T(F,@LoanRmkCode,0)T(F,@AcDate,0),$ )

#BUF1=X,18,S

#BIND1=X,1,S
BIND(#BTN1,click, {cmd=CHAIN; ntxcd=L1001; ntxbuf=#BUF1;ntxbuf5=type<-1:CustNo<-OOCustNo})

![借戶戶號]
!按[瀏覽]連結[顧客明細資料查詢] 必須輸入且存在於顧客檔
#CustNo=A,7,I
C(3,#CHAIN,1,C(3,#FunCd,1,$,s),$)
SHOW(#BTN1)
@V(2,0)

#CustId=X,10,S
@C(4,#CustId,S,$)
A(ID_UNINO,0,#CustId)

!調RIM參數
#RimCustId=X,10,S
#RimFunCd=A,1,S
#RimCustNo=A,7,S
#RimAcDate=D,8,S
#RmkEmpNo=X,6,S
#RmkEmpNoName=X,40,S

<include src="ROM.icf::L1R01.dec"/>
!調RIML1R01取CustName
#RimL1r01=X,1,S
E(0,@RimFunCd,5)
E(0,@RimCustNo,#CustNo)
RESET_RIM(#RimL1r01,L1R01)
S(L1R01,1,#RimCustId,#RimFunCd,#RimCustNo)
R(1,L1R01)
T(2,@CustName,#L1r01CustName)

#CustName=X,100,L

![經辦編號]
#TlrNo=X,6,S
IF(#FunCd==1 || #FunCd==2,T(4,TLRNO$),T(4,#RmkEmpNo))
!IF(#FunCd==1 || #FunCd==2,T(4,TLRNO$),$)

![經辦姓名]
!自動顯示不必輸入
#EmpName=X,10,L
!T(4,EMPNM$)
IF(#FunCd==1 || #FunCd==2,T(4,EMPNM$)HIDE(#BTN1),T(4,#RmkEmpNoName))
!IF(#FunCd==1 || #FunCd==2 ,T(4,EMPNM$)HIDE(#BTN1),$)

!調RIM參數
#RimRmkNo=A,3,S
#RimOtxDate=D,7,S

<include src="ROM.icf::L3R30.dec"/>
!調RIML3R30備忘錄序號
!新增時取戶號最大序號+1
#RimL3r30=X,1,S
C(3,#FunCd,1,$,S)
E(0,@RimFunCd,1)
E(0,@RimCustNo,#CustNo)
E(0,@RimRmkNo,0)
RESET_RIM(#RimL3r30,L3R30)
S(L3R30,1,#RimFunCd,#RimCustNo,#RimRmkNo,#RimAcDate)
R(1,L3R30)
E(0,@RmkNo,#L3r30RmkNo)

![備忘錄序號]
!新增時由系統自動編流水號,其他則必須輸入
#RmkNo=A,3,L

#AcDate=D,7,I
C(3,#CHAIN,1,C(3,#FunCd,1,$,s),$)
E(0,#SYSDATE)
@V(7)
A(DATE,0,#AcDate)

!調RIML3R30
!修改複製刪除查詢時使用
#RimL3r30find=X,1,S
C(3,#FunCd,1,S,$)
E(0,@RimFunCd,5)
E(0,@RimCustNo,#CustNo)
E(0,@RimRmkNo,#RmkNo)
E(0,@RimAcDate,#AcDate)
RESET_RIM(#RimL3r30find,L3R30)
S(L3R30,1,#RimFunCd,#RimCustNo,#RimRmkNo,#RimAcDate)
R(1,L3R30)
T(2,@LoanRmkCode,#L3r30RmkCode)
T(2,@RmkDesc,#L3r30RmkDesc)
T(2,@RmkEmpNo,#L3r30LastUpdateEmpNo)
T(2,@RmkEmpNoName,#L3r30FullName)


![備忘錄代碼]
!必須輸入
#LoanRmkCode=X,3,I
C(3,#FunCd,4,s,$)
C(3,#FunCd,5,s,$)
C(3,#CHAIN,1,C(3,#FunCd,4,s,$),$)
C(3,#CHAIN,1,C(3,#FunCd,5,s,$),$)
HELP(#RmkCodeHelp)
@
C(4,#LoanRmkCode,S,V(H,#RmkCodeHelp))


#RmkCodeX=c,120,L
T(H,#LoanRmkCode,#RmkCodeHelp)



![備忘錄說明]
!新增、修改時備忘錄代碼若為其他則此欄必須輸入,其他則自動顯示不必輸入
!2022.3.18 QC1698皆必須輸入
!#RmkDesc=c,120,I
!#RmkDesc=x,10.50,I
#Msg=x,50,L

#RmkDesc=c,6.40,I
! TOOLTIP(Shift+Enter換行，Enter跳一下欄位)
C(3,#FunCd,4,s,$)
C(3,#FunCd,5,s,$)
C(4,#RmkDesc,T(2,@RmkDesc,#RmkCodeX),$)
@V(7)


#RPTFG=A,1,S



#MRKEY=_,_,S
T(2,#CustNo)




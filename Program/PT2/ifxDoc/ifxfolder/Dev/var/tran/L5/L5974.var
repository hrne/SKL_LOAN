!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="L5974" layout="cols=1;screen.width=[150,850];printer.width=[20,80];order=1">
[
["[L5974]                                 債權銀行帳號明細資料查詢"],
[#<->#,"#FdFinCode+債權機構代號",#FinCode,"@(空白=全部)"],
]

#CHAIN=A,1,S
T(4,CHAIN$) 

#NTXBUF=X,3,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)
T(1,@FinCode,#NTXBUF,1,3)
!INVOKEJS(SHOW,p1,02,02,1)

#NTXBUF5=X,10,S
C(3,#CHAIN,1,T(4,NTXBUF5$),S)

#FdFinCode=X,2,L

#Send=A,1,S
!IF(#CHAIN==0,XMT(),s)

<include src="ROM.icf::L5R12.dec"/>
#RimBankCode=X,8,S

!啟用記號使用---
<include src="HELPRIM.icf::HELPRIM.rtn"/>
#EnableH=X,100,S
T(3,Y:啟用;N:停用)

#CdEnableFg=x,20,S                  
T(3,CdCode.EnableFg)   

#HelpRim=X,1,S
RESET_RIM(#HelpRim,XXR99)
S(XXR99,01,#CdEnableFg)
R(1,XXR99)
CALL(#HelpProc)
T(2,@EnableH,#HelpDesc1)
!啟用記號使用---

! 債權機構代號
#FinCode=X,8,I
IF(#CHAIN==0,$,s)

#RimL5r12A=X,1,S
!IF(#FinCode!="",$,S)
!T(2,@RimBankCode,#FinCode)
!S(L5R12,1,#RimBankCode)
!R(1,L5R12)
!T(2,@FinCodeX,#L5r12BankItem)

#FinCodeX=X,100,L
IF(#FinCode!=0,$,S)


#RPTFG=A,1,S
C(4,#NTXBUF5,E(0,0),E(0,2))

#CHAINXMT=X,1,S
!C(3,#CHAIN,1,E(0,@CHAIN,0)XMT(),$)

! 62000/#INQLEN(339)=180
#MaxDataRow=A,3,S
E(0,100)

</sub>


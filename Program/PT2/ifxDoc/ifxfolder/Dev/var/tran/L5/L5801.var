!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="p1" layout="cols=1;screen.width=[150,1080];printer.width=[20,20];">
[
["[L5801]                                 補貼息作業"],
["#FdMmYy+年月",#InputYear," / ",#InputMonth],
]

! 功能 必須輸入(1: 新增;2: 修改;4: 刪除;5: 查詢)
#FUNCIND=_,_,S
E(0,5)
<include src="COM.icf::CheckAuth.rtn"/>

#FdMmYy=X,2,L
T(3,*)

!---------- AP TEXT AREA Variables ----------

!年月預設值為上月，若系統日(會計日期)為月底日則預設本月
#MonthOfToday=A,2,S
T(1,#SYSDATE,5,2)

#MonthOfTomorrow=A,2,S
T(1,#SYSNDATE,4,2)

#DateOfLastMonth=A,8,S
D(7,3,#SYSDATE,1,0)

#DefaultYear=A,3,S
C(5,#MonthOfToday,#MonthOfTomorrow,T(1,#DateOfLastMonth,2,3),T(1,#SYSDATE,2,3))

#DefaultMonth=A,2,S
C(5,#MonthOfToday,#MonthOfTomorrow,T(1,#DateOfLastMonth,5,2),T(2,#MonthOfToday))

#ThisMonthDate=D,8,S
E(0,0)

! 資料年
#InputYear=A,3,I
E(0,#DefaultYear)
@V(2,0)
V(5,0,#DefaultYear)

! 資料月
#InputMonth=A,2,I
E(0,#DefaultMonth)
@V(2,0)
IF(#InputYear==#DefaultYear,V(5,1,#DefaultMonth),V(5,1,12))

#ThisMonth=A,5,S
E(0,@ThisMonthDate,#InputYear*100)
E(0,@ThisMonthDate,#ThisMonthDate+#InputMonth)
E(0,@ThisMonthDate,#ThisMonthDate*100)
E(0,@ThisMonthDate,#ThisMonthDate+1)
E(0,#ThisMonthDate/100)

#LastMonthDate=D,8,S
D(7,3,#ThisMonthDate,1,0)

#LastMonth=A,5,S
T(1,#LastMonthDate,2,5)


#RPTFG=A,1,S

</sub>


! T(2,@FKEY,7)


!-----------------------------------------------------

#TXCD2=X,5,S
T(3,LM013)

#inputDate=D,7,I
@V(7)
A(DATE,0,#inputDate)
V(5,0,#SYSDATE)

#inputAmount=M,14,I
@C(1,#inputAmount,V(P,此欄位不可小於零),V(P,此欄位不可等於零),$)

#inputType=A,1,I
HELP(0:總表;1:非關係自然人;2:關係自然人;3:非關係法人;4:關係法人;5:全部[不含總表])



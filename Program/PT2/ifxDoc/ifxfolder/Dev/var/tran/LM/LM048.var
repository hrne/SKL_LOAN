[
["[LM048]                                 LM048 企業放款風險承擔限額控管表"],
["@資料年月",#DataYear,"@年",#DataMonth,"@月"],
["@企業放款餘額限額",#EntLoanBalLimit,"@元"],
]

#TXCD2=X,5,S
T(3,LM048)

!日曆日
#DATE=D,8,S
T(4,DATE$)

#DATEYear=A,3,S
T(1,#DATE,2,3)

![年月]

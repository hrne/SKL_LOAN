C(3,#Sno103,0,E(0,0),E(0,1))
#PdfPrt998=A,1,S
C(3,#Sno998,0,E(0,0),E(0,1))
!報表
#PdfPrt=A,1,S
C(3,#Sno,0,E(0,0),E(0,1))

#LOOP=X,1,S
E(0,1)ASGN(LOOP$)
! 建檔日
#OOAuthCreateDate=D,7,O
! 戶號
#OOCustNo=A,7,O
! 額度
#OOFacmNo=A,3,O
! 產生日期
#OOProcessDate=D,7,O
! 銀行名稱
#OORepayBank=A,3,O
! 中文
#OORepayBankX=X,16,O
T(3,)T(H,#OORepayBank,#BankCodeHelp)
! T(1,
!SWITCH(#OORepayBank,004,T(3,臺灣銀行),
!                    005,T(3,土地銀行),
!                    006,T(3,合庫商銀),
!                    007,T(3,第一銀行),
!                    008,T(3,華南銀行),
!                    009,T(3,彰化銀行),
!                    011,T(3,上海銀行),
!                    012,T(3,台北富邦),
!                    103,T(3,臺灣新光商銀),
!                    812,T(3,台新銀行))
! 扣款帳號
#OORepayAcct=A,14,O
! 新增或取消	A:新增 D:取消
#OOCreateFlag=X,1,O
#OOCreateFlagX=X,8,O
T(H,#OOCreateFlag,#CreateFlagHelp2)
! 提出日期
#OOPropDate=D,7,O
! 提回日期
#OORetrDate=D,7,O
! 提回訊息
#OOAuthStatus=X,1,O
#OOAuthStatusX=X,500,O   
T(3,未授權)T(H,#OOAuthStatus,#AuthStatusHelp)
!SWITCH(#OOAuthStatus,
!0,T(2,成功新增或取消授權扣款),
!1,T(2,印鑑不符),
!2,T(2,無此帳號),
!3,T(2,委繳戶統一編號不符),
!4,T(2,已核印成功在案),
!5,T(2,原交易不存在),
!6,T(2,電子資料與授權書內容不符),
!7,T(2,帳戶已結清),
!8,T(2,印鑑不清),
!9,T(2,其他),
!A,T(2,未收到授權書),
!B,T(2,用戶號碼錯誤),
!C,T(2,靜止戶),
!D,T(2,未收到聲明書),
!E,T(2,授權書資料不全),
!F,T(2,警示戶),
!G,T(2,本帳戶不適用授權扣繳),
!H,T(2,已於他行授權扣款),
!I,T(2,該用戶已死亡),
!Z,T(2,未交易或匯入失敗資料),T(2,未授權))
#OOStampFinishDate=D,7,O
! 7+3+7+3+14+7+7+1=49
#secret-no=x,1000,S
T(6A,#OOAuthCreateDate+#OOCustNo+#OORepayBank+#OORepayAcct+#OOCreateFlag+#CreateFlag+#FunctionCode)

#batch-detail=x,100000,S

#batch-print=A,1,S

!#batch-rows 總筆數
#batch-rows=X,2,S

!#batch-rows-selected 勾選之筆數
#batch-rows-selected=X,2,S

!#batch-rows-ok  傳送成功筆數
#batch-rows-ok=X,2,S

!#batch-rows-error 傳送失敗筆數
#batch-rows-error=X,2,S

!#batch-row-status 該列傳送狀態
#batch-row-status=X,50,S

!#batch-row-txtno 該列傳送序號
#batch-row-txtno=X,18,O
</sub>


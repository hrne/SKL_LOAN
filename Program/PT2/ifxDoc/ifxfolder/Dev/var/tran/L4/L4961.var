!------------ TXFORM = L4961 -----------
<sub type="FORM" name="L4961">
#SCRTIL=_,_,S
T(3,[L4961] 火險保費明細)

#OtotalCnt=m,6,L

#OtotalAmt=m,14,L

#LOOP=X,1,S
E(0,1)ASGN(LOOP$)

! 請款年月                           
#OOInsuYearMonth=A,5,O
! 保單號碼
#OOPrevInsuNo=X,16,O
#OONowInsuNo=X,16,O
! 戶號
#OOCustNo=A,7,O
! 額度
#OOFacmNo=A,3,O

#OOCustNoA=X,11,O
T(2,#OOCustNo+-+#OOFacmNo)
! 戶名
#OOCustNm=x,100,O
! 總保費
#OOTotalInsuAmt=m,14,O
! 繳款方式
#OORepayCode=A,2,O
#OORepayCodeX=X,8,O
T(3,)T(H,#OORepayCode,#RepayCodeHelp)

! 處理代碼
#OOStatusCode=A,1,O
#OOStatusCodeX=X,8,O
!T(3,0:正常;1:借支;2:催收;3:呆帳;4:結案)
T(3,)T(H,#OOStatusCode,#StatusCodeHelp)


! 會計日期
#OOAcDate=D,7,O
#OOAcDateYYY=A,3,O
T(1,#OOAcDate,1,3)
#OOAcDateMM=A,2,O
T(1,#OOAcDate,4,2)
#OOAcDateDD=A,2,O
T(1,#OOAcDate,6,2)
#OOAcDateX=X,9,O
C(3,#OOAcDate,0000000,T(2,),
T(2,#OOAcDateYYY+/+#OOAcDateMM+/+#OOAcDateDD))

#OORenewCode=A,1,O
#OORenewCodeX=X,6,O

#OOInsuReceiptDate=D,7,S
!SWITCH(#OORenewCode,1,T(3,自保),2,T(3,續保))

! ["@年月選項",#SearchFlag,#SearchFlagX,"@@@年月",#InsuYearMonth,"@@@繳款方式",#RepayCode,#RepayCodeX,"@@@是否繳款",#SearchOption,#SearchOptionX],


</sub>


IF(#RPFG==1&&#RPTOTF{z}>0&&#RpAmt{i}>0,E(0,@RpCode{j},90),IF(#RPFG==1&&#DF1=={i}&&#RPTOTF{z}>0&&#RpAmt{i}==0,E(0,@RpCode{j},90),$))
IF(#RPFG==2&&#RPTOTF{z}>0&&#RpAmt{i}>0,E(0,@RpCode{j},90),IF(#RPFG==2&&#DF1=={i}&&#RPTOTF{z}>0&&#RpAmt{i}==0,E(0,@RpCode{j},90),$))

T(2,@RpAcCode1,#RP_ACNO)
,C(3,#FKEY,7
,E(0,@RpCode1,#RPTYPZ)
E(0,@RpAmt1,#RPAMTZ)
,s))


! AML姓名
#RP_AmlCheckName=x,100,S

! OverRp短溢收欄

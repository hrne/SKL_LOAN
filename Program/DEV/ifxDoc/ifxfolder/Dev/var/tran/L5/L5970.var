!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="L5970" layout="cols=1;screen.width=[130,870];printer.width=[20,80];order=1">
[
["[L5970]                                 期款試算"],
["#FdPrincipal+本金金額",#Principal,"@@@@年利率",#Rate,"％"],
["#FdLoanTerm+繳款期數",#LoanTerm,"(繳款期數/繳納期款，擇一輸入)"],
["#FdDueAmt+繳納期款",#DueAmt],
]

#FdPrincipal=X,2,L
T(3,*)
#FdLoanTerm=X,2,L
#FdDueAmt=X,2,L

#CHAIN=A,1,S
T(4,CHAIN$) 

! #NTXBUF=X,40,S
! C(3,#CHAIN,1,T(4,NTXBUF$),S)
! T(1,@Principal,#NTXBUF,1,16)
! T(1,@Rate,#NTXBUF,17,6)
! T(1,@LoanTerm,#NTXBUF,23,2)
! T(1,@DueAmt,#NTXBUF,25,16)
! INVOKEJS(SHOW,p1,02,02,1)

! 本金金額
#Principal=m,14,I
C(3,#CHAIN,0,$,s)

#CheckPrincipal=X,1,S
IF(#Principal>0,S,$)
V(P,本金金額請大於零)
! 利率
#Rate=m,2.4,I
C(3,#CHAIN,0,$,s)

!#CheckRate=X,1,S
!IF(#Rate>0,S,$)
!V(P,利率請大於零)

! 繳款期數
#LoanTerm=A,4,I
C(3,#CHAIN,0,$,s)

! 繳納期款
#DueAmt=m,14,I
C(3,#CHAIN,0,$,s)
IF(#LoanTerm>0,S,$)
@IF(#DueAmt>0,$,V(P,期數與期款請擇一輸入))



#RPTFG=A,1,S

#CHAINXMT=X,1,S
C(3,#CHAIN,1,E(0,@CHAIN,0)XMT(),$)


</sub>


!---------- BASIC LABEL Variables ----------
<sub type="SYS">
</sub>

<sub type="SYS" name="label">
!#TXCD
!T(3,L5907)
![資料表頭(HEADER)長度]
#INQHD=n,3,S
E(0,0)ASGN(INQHD$)

![每筆資料明細(OCCURS)長度]
#INQLEN=n,3,S
E(0,217)ASGN(INQLEN$)

![多筆查詢之一個畫面有N筆資料]
#INQREC=n,2,S
E(0,40)ASGN(INQREC$)

![畫面顯示的明細間的高度]
#LOOPH=n,3,S
E(0,1)ASGN(LOOPHEIGHT$)

![每張印錄單列印的筆數]
#INQPRT=n,2,S
E(0,40)ASGN(INQPRT$)
</sub>

<sub type="DC" name="BFHEAD">
<include src="COM.icf::BFHEAD.dec"/>
!起始交易記號  0:起始交易,1:非起始交易
#ORGFG=_,_,S
E(0,0)

#button=x,100,S
T(2,{cmd=CHAIN; ntxcd=L5107; ntxbuf=1; ntxbuf5=type})ASGN(BTN_NEW1$)
K(MODIFYBUTTON,1,新增)
K(MODIFYBUTTON,查詢)
</sub>

!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="L5907" layout="cols=1;screen.width=[130,870];printer.width=[20,80];order=1">
[
["[L5907]                                 指定覆審名單查詢"],
[#<->#,"#FdCustNo+戶號",#CustNo,#FacmNo,"(額度為0查全部)"],
]

#FdCustNo=X,2,L
T(3,*)

#CHAIN=A,1,S
T(4,CHAIN$) 

#NTXBUF=X,11,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)
T(1,@YyyMmFm,#NTXBUF,1,5)
T(1,@YyyMmTo,#NTXBUF,6,5)
INVOKEJS(SHOW,p1,02,02,1)
! 戶號
#CustNo=A,7,I
@V(2,0)
! 額度
#FacmNo=A,3,I

#RPTFG=A,1,S

</sub>

!---------- 輸出共用變數宣告區 ----------
<sub type="RTN" name="AFXMT">
<include src="PRT.icf::PRTHEAD.rtn"/>
</sub>

!------------ TXFORM = L5907 -----------
<sub type="FORM" name="L5907">

#SCRTIL=_,_,S
T(3,[L5907] 指定覆審名單)

#LOOP=X,1,S
E(0,1)ASGN(LOOP$)
! 戶號
#OOCustNo=A,7,S

! 額度
#OOFacmNo=A,3,S

#OOCustFacmNo=X,11,S
T(2,#OOCustNo+-+#OOFacmNo)

! 戶名
#OOCustName=x,100,S

! 備註
#OORemark=X,100,S

! 指定覆審週期
#OOCycle=n,2,S

! 覆審年月
#OOReChkYearMonth=A,5,S

#OOBUF2=X,17,S
T(2,2+#OOCustNo+#OOFacmNo)

#OOBTN2=X,4,S
BIND(grid,{cmd=CHAIN;ntxcd=L5107;text=修改;ntxbuf=#OOBUF2})

#OOBUF4=X,17,S
T(2,4+#OOCustNo+#OOFacmNo)

#OOBTN4=X,4,S
BIND(grid,{cmd=CHAIN;ntxcd=L5107;text=刪除;ntxbuf=#OOBUF4})

</sub>

!------ 上行電文 TEXT ------
<sub type="TIM">
#CustNo#FacmNo
#END
</sub>

!------ 下行電文TOM ------
<sub type="TOM">
<include src="COM.icf::TRCTL.tom"/>
TXFORM=L5907
#OOCustNo#OOFacmNo#OOCustName#OORemark#OOCycle#OOReChkYearMonth
^
</sub>

!---------- 單據輸出組合 ----------
<sub type="PART" prompt='{{#SCRTIL}} world' name="L5907" layout="cols=1;screen.width=[130,870];order=1;">
[
["[L5907]                                 指定覆審名單查詢                                           "],
]
</sub>

<sub type="SELECT">
#RPTFG=0,QUERY.GRID,L5907
#any={detail:true, header:'L5907.part', caption:'', width:1020, rowNum:20, rowList:[20,40,60]}

#OOBTN2=修改
{width:50,search:false,formatter:'cust:bind-button:#OOBTN2',align:'center',canExport:false}

#OOBTN4=刪除
{width:50,search:false,formatter:'cust:bind-button:#OOBTN4',align:'center',canExport:false}

!戶號
#OOCustFacmNo=戶號-額度
{width:105,align:'center'}

!戶號
#OOCustName=戶名
{width:105,align:'center'}

!備註
#OORemark=備註
{width:105}

!指定覆審週期
#OOCycle=指定覆審週期
{width:100}

!覆審年月
#OOReChkYearMonth=覆審年月
{width:80,align:'center'}
^
</sub>

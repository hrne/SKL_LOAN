!["[L5053]                                 介紹、協辦、專業獎勵獎金處理清單"],

#BonusTypeHelp=x,50,S
!T(3,1:介紹獎金;5:協辦獎金;6:專業獎勵金;9:全部)
T(3,1:介紹獎金;5:協辦獎金;9:全部)

#FdDateFm=X,2,L
T(3,*)

#FdBonusType=X,2,L
T(3,*)

#CBuf1=X,1,S
T(3,1)

#button=x,100,S
T(2,{cmd=CHAIN; ntxcd=L5503; ntxbuf=#CBuf1})ASGN(BTN_NEW1$)
K(MODIFYBUTTON,1,新增)
K(MODIFYBUTTON,查詢)

#CHAIN=A,1,S
T(4,CHAIN$) 

#NTXBUF=X,22,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)
T(1,@WorkYM,#NTXBUF,1,5)
T(1,@BonusType,#NTXBUF,6,1)

#Value=A,1,S
!T(1,@DateFm,#SYSDATE,2,7)
!T(1,@DateTo,#SYSDATE,2,7)

! 查詢方式
!#FunctionCd=A,1,L
!E(0,1)
!HELP(#FunctionCdH)
!@V(H,#FunctionCdH)
!C(3,#FunctionCd,1,INVOKEJS(SHOW,L5053_2,1)INVOKEJS(SHOW,L5053_3,0),
!                  INVOKEJS(SHOW,L5053_2,0)INVOKEJS(SHOW,L5053_3,1))
!#FunctionCdX=X,8,L
!T(3, )
!T(H,#FunctionCd,#FunctionCdH)

<include src="ROM.icf::L5R38.rtn"/>

#RimL5R38=X,1,S
C(3,#CHAIN,1,S,$)
RESET_RIM(#RimL5R38,L5R38)
E(0,@L5R38iCode,1)
E(0,@L5R38iDate,#SYSDATE)
S(L5R38,01,#L5R38iCode,#L5R38iDate)
R(1,L5R38)
E(0,@WorkYM,#L5R38oWorkYM)

#FdWorkYM=X,2,L
T(3,*)

#WorkYM=A,5,I
C(3,#CHAIN,1,s,$)
@
A(YM13,1,#WorkYM)


! 獎金發放日
#DateFm=D,7,S
!D(8)
!@A(DATE,0,#DateFm)
!V(7)
!IF(#DateFm==0,V(P,業績日期不可空白),$)

#DateTo=D,7,S
!D(8)
!@A(DATE,0,#DateTo)
!V(7)
!V(5,#DateFm,#SYSDATE)
!IF(#DateTo==0,V(P,業績日期不可空白),$)

#BonusType=A,1,I
C(3,#BonusType,0,E(0,9),$)
C(3,#CHAIN,1,s,$)
HELP(#BonusTypeHelp)
@
V(H,#BonusTypeHelp)

#BonusTypeX=X,20,L
T(H,@BonusType,#BonusTypeHelp)

!#CustNo=A,7,I
!C(3,#FunctionCd,2,$,s)
!@IF(#CustNo>0,s,$)
!V(P,請填寫戶號)
!
!#FacmNo=A,3,I
!C(3,#FunctionCd,2,$,s)
!
!#MRKEY=_,_,S
!C(3,#CustNo,0,S,$)
!C(3,#FacmNo,0,T(2,#CustNo),T(2,#CustNo+-+#FacmNo)) 

![顯示方式]
#RPTFG=A,1,S
E(0,1)
C(3,#CHAIN,1,XMT(),$)

</sub>


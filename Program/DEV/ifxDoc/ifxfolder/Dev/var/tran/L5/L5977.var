!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="L5977" layout="cols=1;screen.width=[150,850];printer.width=[20,80];order=1">
[
["[L5977]                                 客戶最大債權撥付統計查詢"],
[#<->#,"#FdCustId+身份證字號",#CustId],
[#<->#,"#FdCaseSeq+案件序號",#CaseSeq],
]

#FdCustId=X,1,L
T(3,*)
#FdCaseSeq=X,1,L
T(3,*)


#CHAIN=A,1,S
T(4,CHAIN$) 

#NTXBUF=X,13,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)

#POSINTDT=D,8,S
T(4,DATE$)


#CustId=X,10,I
C(3,#CHAIN,1,T(1,#NTXBUF,1,10),$)
C(3,#CHAIN,1,s,$)
@V(7)

#CaseSeq=A,3,I
C(3,#CHAIN,1,T(1,#NTXBUF,11,3),$)
C(3,#CHAIN,1,s,$)
@V(2,0)

#CHAINXMT=X,1,S
C(3,#CHAIN,1,E(0,@CHAIN,0)XMT(),$)

#RPTFG=A,1,S


</sub>

!---------- 輸出共用變數宣告區 ----------
<sub type="RTN" name="AFXMT">
<include src="PRT.icf::PRTHEAD.rtn"/>
</sub>

!------------ TXFORM = L5977 -----------

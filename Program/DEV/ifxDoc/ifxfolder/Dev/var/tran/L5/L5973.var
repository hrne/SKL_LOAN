!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="L5973" layout="cols=1;screen.width=[130,870];printer.width=[20,80];order=1">
[
["[L5973]                                 最大債權撥付明細查詢"],
["#FdYYY+製檔日期",#YYY,"/",#MM,"/",#DD,"(輸入年月，日可不輸入)"],
["#FdCustId+身分證字號",#CustId,"(空白=全部)"],
]

<include src="HELPRIM.icf::HELPRIM.rtn"/>
! CaseKindCode
#CaseKindCodeCode=x,20,S
T(3,CdCode.CaseKindCode)
#CaseKindCodeHelpRim=X,1,S
RESET_RIM(#CaseKindCodeHelpRim,XXR99)
S(XXR99,01,#CaseKindCodeCode)
R(1,XXR99)
CALL(#HelpProc)
T(2,@CaseKindCodeHelp,#HelpDesc1)
#CaseKindCodeHelp=x,1024,S

#FdYYY=X,2,L
#FdCustId=X,2,L


#CHAIN=A,1,S
T(4,CHAIN$) 

#NTXBUF=X,17,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)
T(1,@YYY,#NTXBUF,1,3)
T(1,@MM,#NTXBUF,4,2)
T(1,@DD,#NTXBUF,6,2)
T(1,@CustId,#NTXBUF,8,10)

! 製檔日期
#YYY=A,3,I
C(3,#CHAIN,0,$,s)

#MM=A,2,I
C(3,#CHAIN,0,$,s)
IF(#YYY==0,s,$)
@V(5,1,12)

#DD=A,2,I
C(3,#CHAIN,0,$,s)
IF(#YYY==0,s,$)
@V(5,0,31)D(8)

#DateFormate=D,7,S
T(2,#YYY+#MM+#DD)
IF(#DD==0,s,$)
@A(DATE,0,#DateFormate)

! 身分證字號
#CustId=X,10,I
C(3,#CHAIN,0,$,s)
@C(4,#CustId,S,$)
A(ID_UNINO,0,#CustId)


!身分證找戶號
<include src="ROM.icf::L2R47.dec"/>
#Rim2R47CustId=X,10,S

#RimL2R47=X,1,S
C(4,#CustId,S,$)
T(2,@Rim2R47CustId,#CustId)
RESET_RIM(#RimL2R47,L2R47)
S(L2R47,1,#Rim2R47CustId)
R(1,L2R47)

#MRKEY=_,_,S
C(4,#CustId,S,$)
T(2,#L2R47CustNo)

#RPTFG=A,1,S

#CHAINXMT=X,1,S
C(3,#CHAIN,1,E(0,@CHAIN,0)XMT(),$)



</sub>

!---------- 輸出共用變數宣告區 ----------
<sub type="RTN" name="AFXMT">
<include src="PRT.icf::PRTHEAD.rtn"/>
</sub>

!------------ TXFORM = L5973 -----------
<sub type="FORM" name="L5973">

#SCRTIL=_,_,S
T(3,[L5973] 最大債權撥付明細表)

#LOOP=X,1,S
E(0,1)ASGN(LOOP$)

! 位階------每筆的第一筆給1 其餘給0
#OORank=A,1,S

! 製檔日期
#OOExportDate=D,7,O

#OOExportDateA=X,3,S
T(1,#OOExportDate,1,3)
#OOExportDateB=X,2,S
T(1,#OOExportDate,4,2)
#OOExportDateC=X,2,S
T(1,#OOExportDate,6,2)

#OOExportDateX=X,9,S
IF(#OOExportDate==0,T(3,),T(2,#OOExportDateA+/+#OOExportDateB+/+#OOExportDateC))

! 案件種類
#OOCaseKindCode=A,1,O
#OOCaseKindCodeX=X,4,O
T(H,#OOCaseKindCode,#CaseKindCodeHelp)

! 身分證字號
#OOCustId=X,10,O

! C(3,#OORank,1,T(2,#OOCustId),T(2, ))

! 戶號
#OOCustNo=A,7,O
#OOCustNoX=X,7,O
T(2,#OOCustNo)
! C(3,#OORank,1,T(2,#OOCustNo),T(2, ))
! 戶名
#OOCustName=X,100,O
! C(3,#OORank,1,T(2,#OOCustName),T(2, ))

! 債權機構
#OOFinCodeName=A,3,O
! 機構名稱
#OOFinCodeNameNM=X,100,O

! 撥付金額
#OOApprAmt=m,14,O
! 累計撥付金額
#OOAccuApprAmt=m,14,O
! 撥付比例
#OOAmtRatio=m,2.2,O

#XXAmtRatioX=X,5,O
X(#OOAmtRatio)

#OOAmtRatioX=X,10,O
C(3,#XXAmtRatioX,0,T(2,),T(2,#XXAmtRatioX))
</sub>


!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="p1" layout="cols=1;screen.width=[150,850];printer.width=[20,20];">
[
["[L6075]                                 聯徵報送-地區別資料查詢"],
["@地區別",#CityCode,#CityCodeX],
!["@顯示方式",
!<include src="COM.icf::RPTFG.scr"/>
!],
]
!---------- AP Button AREA ----------
![Buttom資料查詢]
!#BTN1=X,15,I,ui:button;value:新增鄉鎮區;enable:1;tabbable:0;title:L6705 鄉鎮區資料維護
!#BUF1=X,42,S

!---------- AP TEXT AREA Variables ----------
#CHAIN=A,1,S
T(4,CHAIN$) 

#NTXBUF=X,4,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)

!#RPTFG=A,1,S
!E(0,0)

#RimFunCd=A,1,S
#RimCityCode=X,2,S
#RimAreaCode=X,3,S

<include src="ROM.icf::L6R03.dec"/>
#RimL6r03City=X,1,S
E(0,@RimFunCd,1)
T(3,@RimCityCode,)
T(3,@RimAreaCode,)
S(L6R03,1,#RimFunCd,#RimCityCode,#RimAreaCode)
R(1,L6R03)

! 縣市代碼的下拉選單
#CityHelp=X,10000,S
T(2,#L6r03Result)

!地區別
#CityCode=X,2,I
C(3,#CHAIN,1,T(1,#NTXBUF,1,2),$)
C(3,#CHAIN,1,s,$)
HELP(#CityHelp)

#CityCodeX=x,20,L
T(2,)
T(H,#CityCode,#CityHelp)

!鄉鎮區
#AreaCode=X,2,S
C(3,#CHAIN,1,T(1,#NTXBUF,3,2),$)
C(3,#CHAIN,1,s,$)
T(2,00)

#BUF1=X,6,S
!C(4,#AreaCode,HIDE(#BTN1),SHOW(#BTN1))
!T(2,1+#CityCode+#AreaCode)

#CHAINXMT=X,1,S
C(3,#CHAIN,1,E(0,@CHAIN,0)XMT(),$)

!#BIND1=X,1,S
!BIND(#BTN1,click, {cmd=CHAIN; ntxcd=L6705; ntxbuf=#BUF1})

!<include src="COM.icf::RPTFG.dec"/>
#RPTFG=A,1,S
E(0,0)

</sub>

!---------- 輸出共用變數宣告區 ----------
<sub type="RTN" name="AFXMT">
<include src="PRT.icf::PRTHEAD.rtn"/>
</sub>

!---------- TXFORM = L6075 ----------
<sub type="FORM" name="L6075">

!#SCRPRT=_,_,S
!C(5,#TXFORM,L6075,$,S)

#SCRTIL=_,_,S
T(3,[L6075] 鄉鎮區資料)

!------ TOM(HEAD)   Variables (FOR OUTPUT SCREEN) ------

!------ TOM(OCCURS) Variables (FOR OUTPUT SCREEN) ------
#LOOP=X,1,S
T(3,1)ASGN(LOOP$)

! 地區別(TOTA)
#OOCityCode=X,2,L

! 鄉鎮區(TOTA)
#OOAreaCode=X,2,L

! 縣市名稱(TOTA)
#OOCityItem=X,20,L

! 鄉鎮區名稱(TOTA)
#OOAreaItem=X,24,L


! 修改的按鈕
#OOFunc2=A,1,S
E(0,2)

#OOBUF2=X,5,S
T(2,#OOFunc2+#OOCityCode+#OOAreaCode)

#OOBTN2=X,4,S
BIND(grid,{cmd=CHAIN;ntxcd=L6705;text=修改;ntxbuf=#OOBUF2})

! 刪除的按鈕
#OOFunc4=A,1,S
E(0,4)

#OOBUF4=X,5,S
T(2,#OOFunc4+#OOCityCode+#OOAreaCode)

#OOBTN4=X,4,S
BIND(grid,{cmd=CHAIN;ntxcd=L6705;text=刪除;ntxbuf=#OOBUF4})

! 查詢的按鈕
#OOFunc5=A,1,S
E(0,5)

#OOBUF5=X,5,S
T(2,#OOFunc5+#OOCityCode+#OOAreaCode)

#OOBTN5=X,4,S
BIND(grid,{cmd=CHAIN;ntxcd=L6705;text=查詢;ntxbuf=#OOBUF5})
</sub>



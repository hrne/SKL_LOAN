!---------- AP Button AREA ----------
![Buttom資料查詢]
!#BUF1=X,42,S

! 必輸欄位

! 永遠為必輸欄位
#FdFuncCode=X,2,L
#FdGuaRelCode=X,2,L
#FdGuaRelItem=X,2,L
#FdGuaRelJcic=X,2,L



!---------- AP TEXT AREA Variables ----------
<include src="HELPRIM.icf::HELPRIM.rtn"/>

!FuncCode2(1:新增;2:修改;4:刪除)
#CODEFuncCode2=x,20,S                  
T(3,CdCode.FuncCode2)                  
#FuncCode2Help=x,50,S     

#HelpRim=X,1,S
RESET_RIM(#HelpRim,XXR99)
S(XXR99,01,#CODEFuncCode2)
R(1,XXR99)
CALL(#HelpProc)
T(2,@FuncCode2Help,#HelpDesc1)

#CHAIN=A,1,S
T(4,CHAIN$)
!!!T(2,@RimTxCode,#TXCD)
IF(#CHAIN!=1,V(P,此為連動交易，請從交易:[L6067 保證人關係代碼查詢]進入),$)

#NTXBUF=X,65,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)

#CHAIN_FuncCode=X,1,S
T(1,#NTXBUF,1,1)

#CHAIN_GuaRelCode=X,2,S
T(1,#NTXBUF,2,2)

#CHAIN_GuaRelItem=x,60,S
T(1,#NTXBUF,4,60)

#CHAIN_GuaRelJcic=X,2,S
T(1,#NTXBUF,64,2)

#CHAINSET=X,1,S
C(3,#CHAIN,1,$,S)
T(2,@FuncCode,#CHAIN_FuncCode)
C(3,#FuncCode,1,S,$)
T(2,@GuaRelCode,#CHAIN_GuaRelCode)
T(2,@GuaRelItem,#CHAIN_GuaRelItem)
T(2,@GuaRelJcic,#CHAIN_GuaRelJcic)

! 功能 必須輸入(1: 新增;2: 修改;4: 刪除)
#FuncCode=A,1,S
T(F,@FuncCode,0)
C(3,#CHAIN,1,s,$)
HELP(#FuncCode2Help)
@V(H,#FuncCode2Help)

#FuncCodeX=X,12,L
T(H,#FuncCode,#FuncCode2Help)
C(2,#FuncCode,$,K(MODIFYBUTTON,新增),K(MODIFYBUTTON,修改),$,K(MODIFYBUTTON,刪除))


#FUNCIND=_,_,S
E(0,#FuncCode)
<include src="COM.icf::CheckAuth.rtn"/>


!FuncCode=1,2 顯示框線
#WKTF=X,1,S
IF (#FuncCode==1 || #FuncCode==2 ,T(F,@GuaRelItem,1)T(F,@GuaRelJcic,1),
                                  T(F,@GuaRelItem,0)T(F,@GuaRelJcic,0))

IF (#FuncCode==1 ,T(F,@GuaRelCode,1),T(F,@GuaRelCode,0))

#WKPSC=X,2,S

#WKSTAR1=X,2,S
C(2,#FuncCode,S,T(3,*),S,S,S,S)

#WKSTAR2=X,2,S
C(2,#FuncCode,S,T(3,*),T(3,*),S,S,S)

#WKNAME=X,1,S
T(2,@FdGuaRelCode,#WKSTAR1)
T(2,@FdGuaRelItem,#WKSTAR2)
T(2,@FdGuaRelJcic,#WKSTAR2)


!保證人關係代碼
#GuaRelCode=X,2,I
C(3,#CHAIN,1,C(3,#FuncCode,1,$,s),$)
@V(7)V(NL)

!!!#SendL6R08=X,1,S
!!!E(0,@RimFuncCode,#FuncCode)
!!!E(0,@RimGuaRelCode,#GuaRelCode)
!!!RESET_RIM(#SendL6R08,L6R08)
!!!S(L6R08,1,#RimFuncCode,#RimTxCode,#RimGuaRelCode)
!!!R(1,L6R08)

!保證人關係說明
#GuaRelItem=x,60,I
!!!T(2,#L6R08GuaRelItem)
C(3,#FuncCode,4,s)
@V(7)

!保證人關係JCIC代碼
#GuaRelJcic=X,2,I
!!!T(2,#L6R08GuaRelJcic)
C(3,#FuncCode,4,s)
@V(7)



#RPTFG=A,1,S
E(0,0)

#AGAIN=X,1,S
IF(#FuncCode==4 || #FuncCode==2,$,S)
E(0,1)ASGN(AGAIN$)

#MRKEY=_,_,S
T(2,#GuaRelCode)

!!!<include src="ROM.icf::L0Rim.dec"/>
!!!<include src="ROM.icf::L6R08Rim.dec"/>
!!!<include src="ROM.icf::L6R08.dec"/>
</sub>


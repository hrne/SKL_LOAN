!---------- TXFORM = L6030 ----------
<sub type="FORM" name="L6030">

!#SCRPRT=_,_,S
!C(5,#TXFORM,L6030,$,S)

#SCRTIL=_,_,S
T(3,[L6030] 特殊/例假日)

!------ TOM(HEAD)   Variables (FOR OUTPUT SCREEN) ------
!------ TOM(OCCURS) Variables (FOR OUTPUT SCREEN) ------
#LOOP=X,1,S
T(3,1)ASGN(LOOP$)

! 假日(TOTA)
#OOHoliday=D,7,S

! 假日型態(TOTA)
#OOTypeCode=N,1,S

#OOTypeCodeX=X,12,S
T(H,#OOTypeCode,#HolidayTypeHelp)

!日曆日
#CDATE=D,8,S
T(4,CDATE$)

#CDATEX=D,7,S
T(1,#CDATE,2,7)

! 修改的按鈕
#OOFunc2=A,1,S
E(0,2)

#OOBUF2=X,11,S
T(2,#OOFunc2+#Country+#OOHoliday+#OOTypeCode)

#OOBTN2=X,4,S
BIND(grid,{cmd=CHAIN;ntxcd=L6310;text=修改;ntxbuf=#OOBUF2})

! 刪除的按鈕
#OOFunc4=A,1,S
E(0,4)

#OOBUF4=X,11,S
T(2,#OOFunc4+#Country+#OOHoliday+#OOTypeCode)

#OOBTN4=X,4,S
IF(#OOHoliday<#CDATEX,BIND(grid,cancel),BIND(grid,{cmd=CHAIN;ntxcd=L6310;text=刪除;ntxbuf=#OOBUF4}))


</sub>



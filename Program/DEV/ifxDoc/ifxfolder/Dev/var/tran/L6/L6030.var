!HolidayType
#CDCODEHolidayType=x,20,S                  
T(3,CdCode.HolidayType)                  
#HolidayTypeHelp=x,200,S

<include src="HELPRIM.icf::HELPRIM.rtn"/>
#HelpRim=X,1,S

@A(YM,0,#YearMonthStart)


! 假日年月迄
!#YearEnd=A,3,I
!E(0,#YearStart)
!@V(5,#YearStart,999)
!#MonthEnd=A,2,I
!E(0,#MonthStart)
!@V(5,#MonthStart,12)


#YearMonthEnd=A,5,I
E(0,#YearMonthStart)
@A(YM,0,#YearMonthEnd)
V(5,#YearMonthStart,99912)

!<include src="COM.icf::RPTFG.dec"/>

#TXMT=A,1,S
C(3,#CHAIN,0,$,E(0,@CHAIN,0)XMT())


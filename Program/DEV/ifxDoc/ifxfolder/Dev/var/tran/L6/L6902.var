!---------- TXFORM = L6902 ----------
<sub type="FORM" name="L6902">

!#SCRPRT=_,_,S
!C(5,#TXFORM,L6902,$,S)

#SCRTIL=_,_,S
T(3,[L6902] 會計總帳)


!------ TOM(HEAD)   Variables (FOR OUTPUT SCREEN) ------

!------ TOM(OCCURS) Variables (FOR OUTPUT SCREEN) ------
#LOOP=X,1,S
T(3,1)ASGN(LOOP$)

! 日期
#OOAcDate=D,7,L

!帳冊別
#OOAcBookCode=X,3,L
!區隔帳冊
#OOAcSubBookCode=X,3,L

! 借方金額
#OODbAmt=m,14.2,S
#OODbAmt1=m,14,S
E(0,#OODbAmt)
#OODbAmtX=X,17,L
IF(#OODbAmt1==0,S,$)
X(#OODbAmt1)

! 貸方金額
#OOCrAmt=m,14.2,S
#OOCrAmt1=m,14,S
E(0,#OOCrAmt)
#OOCrAmtX=X,17,L
IF(#OOCrAmt1==0,S,$)
X(#OOCrAmt1)

! 借貸
#OODbCr=X,1,S
#OODbCrX=X,2,L
IF(#OODbCr=="D",T(3,借),T(3,貸))

! 餘額
#OOTdBal=+m,14.2,S
#OOTdBal1=+m,14,S
E(0,#OOTdBal)
#OOTdBalX=X,17,L
IF(#OOTdBal1==0,S,$)
X(#OOTdBal1)

!明細
#OOBUF5=X,31,S
T(2,#OOAcBookCode+#OOAcSubBookCode+#AcNoCode+#AcSubCode+#AcDtlCode+#OOAcDate)

#OOBTN5=X,4,S
BIND(grid,{ cmd=CHAIN; ntxcd=L6903;text=明細;ntxbuf=#OOBUF5})

</sub>



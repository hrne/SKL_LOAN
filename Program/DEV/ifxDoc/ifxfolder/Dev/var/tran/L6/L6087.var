!------ TOM(HEAD)   Variables (FOR OUTPUT SCREEN) ------
!------ TOM(OCCURS) Variables (FOR OUTPUT SCREEN) ------
#LOOP=X,1,S
T(3,1)ASGN(LOOP$)

#OOWorkMonth=A,5,S
#OOBtnFg=A,1,S

!修改
#OOBUF2=X,7,S
T(2,2+#OOWorkMonth+#OOBtnFg)

#OOBTN2=X,1,S
BIND(grid,{ cmd=CHAIN; ntxcd=L6787;text=修改;ntxbuf=#OOBUF2})
IF(#OOBtnFg==0,BIND(grid,cancel),$)

! 複製
#OOBUF3=X,6,S
T(2,3+#OOWorkMonth+0)

#OOBTN3=X,1,S
BIND(grid,{ cmd=CHAIN; ntxcd=L6787;text=複製;ntxbuf=#OOBUF3})

! 刪除
#OOBUF4=X,6,S
T(2,4+#OOWorkMonth+0)

#OOBTN4=X,1,S
BIND(grid,{ cmd=CHAIN; ntxcd=L6787;text=刪除;ntxbuf=#OOBUF4})
IF(#OOBtnFg==0,BIND(grid,cancel),$)
IF(#OOBtnFg==2,BIND(grid,cancel),$)
! 查詢
#OOBUF5=X,6,S
T(2,5+#OOWorkMonth+0)

#OOBTN5=X,1,S
BIND(grid,{ cmd=CHAIN; ntxcd=L6787;text=查詢;ntxbuf=#OOBUF5})

</sub>



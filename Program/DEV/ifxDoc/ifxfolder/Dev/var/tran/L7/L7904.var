!---------- TXFORM = L7904 ----------
<sub type="FORM" name="L7904">

!#SCRPRT=_,_,S
!C(5,#TXFORM,L7904,$,S)

#SCRTIL=_,_,S
T(3,[L7904] 特殊客觀減損狀況查詢)

!------ TOM(HEAD)   Variables (FOR OUTPUT SCREEN) ------
!------ TOM(OCCURS) Variables (FOR OUTPUT SCREEN) ------
#LOOP=X,1,S
T(3,1)ASGN(LOOP$)

! 戶號(TOTA)
#OOCustNo=A,7,S

! 額度(TOTA)
#OOFacmNo=A,3,S

!中文姓名(TOTA)
#OOCustName=c,2.50,S

! 發生日期(TOTA)
#OOMarkDate=D,7,S

! 註記碼(TOTA)
#OOMarkCode=A,1,S
#OOMarkCodeDesc=X,20,S
T(H,#OOMarkCode,#MarkCodeHelp)
#OOMarkCodeFull=X,23,L
C(4,#OOMarkCode,S,$)
T(2,#OOMarkCode+ +#OOMarkCodeDesc)


! 起始日期(TOTA)
#OOStartDate=D,7,S

! 終止日期(TOTA)
#OOEndDate=D,7,S

! 修改的按鈕
#OOFunc2=A,1,S
E(0,2)

#OOBUF2=X,34,S
T(2,#OOFunc2+#OOCustNo+#OOFacmNo+#OOMarkDate+#OOMarkCode+#OOStartDate+#OOEndDate)

#OOBTN2=X,4,S
BIND(grid,{cmd=CHAIN;ntxcd=L7204;text=修改;ntxbuf=#OOBUF2})

!! 刪除的按鈕    移除刪除功能
!#OOFunc4=A,1,S
!E(0,4)
!
!#OOBUF4=X,34,S
!T(2,#OOFunc4+#OOCustNo+#OOFacmNo+#OOMarkDate+#OOMarkCode+#OOStartDate+#OOEndDate)
!
!#OOBTN4=X,4,S
!BIND(grid,{cmd=CHAIN;ntxcd=L7204;text=刪除;ntxbuf=#OOBUF4})

</sub>



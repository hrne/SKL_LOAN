!---------- AP Button AREA ----------
![Buttom資料查詢]
!#BTN1=X,15,I,ui:button;value:新增類別;Enable:1;tabbable:0;title:L7204 違約損失率檔登錄
!#BUF1=X,42,S
<include src="HELPRIM.icf::HELPRIM.rtn"/>


!---------- AP TEXT AREA Variables ----------
#CHAIN=A,1,S
T(4,CHAIN$)

#NTXBUF=X,4,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)

!#RPTFG=A,1,S
!E(0,0)

#DATE=D,8,S
T(4,DATE$)

#CODEIFRSCODE=x,20,S
T(3,CdCode.MarkCode)
#MarkCodeHelp=x,300,S

#HelpRim=X,1,S
RESET_RIM(#HelpRim,XXR99)
S(XXR99,01,#CODEIFRSCODE)
R(1,XXR99)
CALL(#HelpProc)
T(2,@MarkCodeHelp,#HelpDesc1)

! 戶號
#CustNo=X,7,I
@C(4,#CustNo,s,$)
V(9)V(2,0)E(0,@TEMP_CustNo,#CustNo)T(2,#TEMP_CustNo)

!如戶號有輸入則前補零 沒輸入顯示空白 X欄位傳到A欄位補零再傳回去
#TEMP_CustNo=A,7,S

! 額度
#FacmNo=X,3,I
C(4,#CustNo,S,$)  !如戶號沒有輸入，則額度放空白
@C(4,#FacmNo,s,$)
V(9)V(2,0)E(0,@TEMP_FacmNo,#FacmNo)T(2,#TEMP_FacmNo)

!如額度有輸入則前補零 沒輸入顯示空白 X欄位傳到A欄位補零再傳回去
#TEMP_FacmNo=A,3,S

#RPTFG=A,1,S
T(2,0)
!<include src="COM.icf::RPTFG.dec"/>

#TXMT=A,1,S
C(3,#CHAIN,0,$,E(0,@CHAIN,0)XMT())

</sub>


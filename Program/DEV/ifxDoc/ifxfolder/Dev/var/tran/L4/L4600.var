!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="L4600" layout="cols=1;screen.width=[150,850];printer.width=[20,80];order=1">
[
["[L4600]@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@火險到期檔產生作業"],
[#<->#,"#FdInsuEndMonth+火險到期年月",#InsuEndMonth],
]

#FdInsuEndMonth=X,2,L
T(3,*)

#CHAIN=A,1,S
T(4,CHAIN$) 

#CheckDays=m,2,S
T(1,#SYSDATE,7,2)

#NEXT_MONTH=D,8,S
D(7,2,#SYSDATE,2,0)

! 火險到期年月 下個月
#InsuEndMonth=A,5,I
! IF(#CheckDays<15,T(1,#SYSDATE,2,5),T(1,#NEXT_MONTH,2,5))
T(1,#NEXT_MONTH,2,5)
@A(YM,1,#InsuEndMonth)

</sub>


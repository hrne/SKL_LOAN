!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="L4511" layout="cols=1;screen.width=[130,870];printer.width=[20,80];order=1">
[
["[L4511]@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@產出員工扣薪媒體檔"],
[#<->#,"#FdEntryDate+入帳日期",#EntryDate],
[#<->#,"#FdOpItem+作業項目",#OpItem,#OpItemX],
]
! 作業項目
#OpItemHelp=x,20,S
T(3,1:15日薪;2:非15日薪)

#FdEntryDate=X,2,L
T(3,*)

#FdOpItem=X,2,L
T(3,*)

#CHAIN=A,1,S
T(4,CHAIN$) 

#NTXBUF=X,8,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)
T(1,@OpItem,#NTXBUF,7,1)
T(H,@OpItemX,#OpItem,#OpItemHelp)
#Space=X,1,S
C(3,#CHAIN,1,$,S)

#NEXT_DATE=D,8,S
T(4,NBSDY$)

! 入帳日期
#EntryDate=D,7,I
E(0,#SYSDATE)
@
V(7)A(DATE,0,#EntryDate)



#OpItem=A,1,I
HELP(#OpItemHelp)
@V(H,#OpItemHelp)
#OpItemX=X,10,L
T(3,)T(H,#OpItem,#OpItemHelp)
</sub>


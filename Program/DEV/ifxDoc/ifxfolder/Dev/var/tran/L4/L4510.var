!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="L4510" layout="cols=1;screen.width=[130,870];printer.width=[20,80];order=1">
[
["[L4510]@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@產出員工扣薪明細檔"],
[#<->#,"#FdMediaDate+媒體日期",#MediaDate],
[#<->#,"#FdOpItem+作業項目",#OpItem,#OpItemX],
[#<->#,"@@@@@@產出報表","火險費扣薪明細表"],
[#<->#,"@@@@@@@@@","帳管費扣薪明細表"],
[#<->#,"@@@@@@@@@","扣薪媒體明細表"],
["#grid#,{id:1,expand:true,loop:9,row_height:1,s_cols:[80,100,100,100], p_cols:[10,10,10,10]}","","",
["流程別","工作月份","媒體日期","入帳日期"],
[[#Flow1],[#WorkMonth1],[#MediaDate1],[#EntryDate1],
[]]],
]

#FdMediaDate=X,2,L
T(3,*)
#FdOpItem=X,2,L
T(3,*)

#CHAIN=A,1,S
T(4,CHAIN$) 

#FORE_MONTH=D,8,S
D(7,3,#SYSDATE,1,0)

! 預設:第一次三個都印
!      第二次只印媒體明細
#ColDIS=A,1,S
E(0,@MediaDate,#SYSDATE)
C(3,#BATNO,0,T(2,@FlagA,Y)T(2,@FlagB,Y),T(2,@FlagA, )T(2,@FlagB, ))

#NTXBUF=X,8,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)
T(1,@OpItem,#NTXBUF,7,1)

#MediaDate=D,7,I
INVOKEJS(SHOW,L4510_5,0)
@C(3,#MediaDate,0,V(P,請輸入日期),$)
A(DATE,0,#MediaDate)
INVOKEJS(SHOW,L4510_5,1)

! 作業項目
#OpItemHelp=x,20,S
T(3,1:15日薪;2:非15日薪)

#OpItem=A,1,I
HELP(#OpItemHelp)
@V(H,#OpItemHelp)
#OpItemX=X,10,L
T(3,)T(H,#OpItem,#OpItemHelp)

#RimToday=D,7,S
E(0,#MediaDate)

<include src="ROM.icf::L4R16.dec"/>

#RimL4r16=X,1,S
RESET_RIM(#RimL4r16,L4R16)
S(L4R16,1,#RimToday,#OpItem)
R(1,L4R16)
##loop {times:9,i:1}
E(0,@EntryDate{i},#L4r16EntryDate{i})
E(0,@MediaDate{i},#L4r16MediaDate{i})
E(0,@WorkMonth{i},#L4r16WorkMonth{i})
##end

##loop {times:9,i:1,j:1}
#Flow{i}=m,1,L
E(0,{i})
#Col{i}=A,1,S
C(3,#WorkMonth{i},0,INVOKEJS(SHOW,grd1_{j},0),INVOKEJS(SHOW,grd1_{j},1))
##end

! 非15日薪
##loop {times:9,i:1}
#WorkMonth{i}=A,5,L

#MediaDate{i}=D,7,L

#EntryDate{i}=D,7,L

##end


#FlagA=X,1,S
! HELP(Y: ;N: )
! 作業項目

#FlagB=X,1,S
! HELP(Y: ;N: )
! 作業項目

! 每天RESET
#BATNO=A,3,S

#ReportA=A,1,S
C(4,#FlagA,$,s)
E(0,1)

#ReportB=A,1,S
C(4,#FlagB,$,s)
E(0,1)

#ReportC=A,1,S
E(0,1)

</sub>


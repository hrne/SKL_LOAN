!---------- 交易畫面及個別交易變數宣告 ----------
<sub type="DC" name="L4607" layout="cols=1;screen.width=[200,700];printer.width=[20,20];">
[
["[L4607]                                 建築造價參考資料維護"],
["#FdCityCode+縣市代碼",#CityCode,#CityCodeX],
["#FdMaterial+建物建材",#Material,#MaterialX],
["#FdVersionDate+版本日期",#VersionDate],
]

#FdCityCode=X,2,L
T(2,*)
#FdMaterial=X,2,L
T(2,*)
#FdVersionDate=X,2,L
T(2,*)
#FdFloorLowerLimit=X,2,L
!---------- AP Button AREA ----------
![Buttom資料查詢]
#BUF1=X,42,S
!---------- AP TEXT AREA Variables ----------

#CHAIN=A,1,S
T(4,CHAIN$)

#NTXBUF=X,13,S
C(3,#CHAIN,1,T(4,NTXBUF$),S)

<include src="HELPRIM.icf::HELPRIM.rtn"/>
#CALLGRID=X,1,S
INVOKEJS(SHOW,p1,0)
##loop{times:50,n:1}
C(3,#Cost{n},0,INVOKEJS(SHOW,grd1_{n},0),INVOKEJS(SHOW,grd1_{n},1))
##end
INVOKEJS(SHOW,p1,1)INVOKEJS(SHOW,grd1_2,1)


#CODEMATERIAL=x,20,S
T(3,CdCode.Material)

#MaterialHelp=x,200,S

#HelpRim=X,1,S
RESET_RIM(#HelpRim,XXR99)
S(XXR99,01,#CODEMATERIAL)
R(1,XXR99)
CALL(#HelpProc)
T(2,@MaterialHelp,#HelpDesc1)


!調RIM縣市 ST
<include src="ROM.icf::L6R03.dec"/>
!調RIM參數
#RimCityCode=X,2,S
#RimAreaCode=X,3,S
#RimFunCd=A,1,S
#RimMaterial=A,1,S
#RimVersionDate=D,7,S

! 調RIM取縣市代碼
#RimL6r03City=X,1,S
E(0,@RimFunCd,1)
T(2,@RimCityCode,)
T(2,@RimAreaCode,)
S(L6R03,1,#RimFunCd,#RimCityCode,#RimAreaCode)
R(1,L6R03)

! 縣市代碼的下拉選單
#L6r03ResultCity=X,50000,S
T(2,#L6r03Result)

!縣市代碼
#CityCode=X,2,I
HELP(#L6r03ResultCity,cols:5)
@
V(H,#L6r03ResultCity)

#Cdate=D,8,S
T(4,CDATE$)

#CD=D,7,S
T(1,#Cdate,2,7)

! 縣市代碼對應名稱
#CityCodeX=X,10,L
T(H,#CityCode,#L6r03ResultCity)

!建物材料
#Material=A,1,I
HELP(#MaterialHelp)
@V(H,#MaterialHelp)

#MaterialX=X,40,L
T(H,#Material,#MaterialHelp)

!建物材料
#VersionDate=D,7,I
E(0,#CD)
@V(7)A(DATE,0,#VersionDate)

<include src="ROM.icf::L4R28.dec"/>

! 調RIM取縣市代碼
#RimL4r28City=X,1,S
T(2,@RimCityCode,#CityCode)
E(0,@RimMaterial,#Material)
E(0,@RimVersionDate,#VersionDate)
S(L4R28,1,#RimCityCode,#RimMaterial,#RimVersionDate)
R(1,L4R28)

#Final=A,3,S
E(0,0)


#Clear=X,1,S
##loop{times:50,i:1}
E(0,@FloorLowerLimit{i},0)
E(0,@Cost{i},0)
##end


#recvL4r28=X,1,S
##loop{times:50,i:1,j:2}
C(3,#L4r28FloorLowerLimit{i},0,S,$)
E(0,@FloorLowerLimit{i},#L4r28FloorLowerLimit{i})
E(0,@Cost{i},#L4r28Cost{i})
E(0,@Final,{i})
##end

#TF=A,2,S
E(0,#Final)

#show=X,1,S
##loop{times:50,n:1}
IF(#Final >= {n},INVOKEJS(SHOW,grd1_{n},1),INVOKEJS(SHOW,grd1_{n},0))
IF(#TF >= {n},T(F,#FloorLowerLimit{n},0),T(F,#FloorLowerLimit{n},1))
##end
IF(#Final == 0,INVOKEJS(SHOW,grd1_1,1),$)


#FloorLowerLimit0=X,1,S
T(3,X)

#Cost0=X,1,S
T(3,X)


##loop{times:50,i:1,j:0,rowSeq:2}

#HIDE_ROW_{i}=@,1,S
C(3,#Cost{i},0,INVOKEJS(SHOW,grd1_{rowSeq},0),INVOKEJS(SHOW,grd1_{rowSeq},1))

#SHOW_ROW_{i}=@,1,S
INVOKEJS(SHOW,grd1_{rowSeq},1)

#FloorLowerLimit{i}=A,3,I
IF(#TF >= {i},s,$)
IF(#FloorLowerLimit{j} == 0,S,$)
@
IF(#FloorLowerLimit{i} == 0,S,$)

#Cost{i}=m,14,I
IF(#FloorLowerLimit{i} == 0,S,$)
IF(#Final > {j},CALL(#SHOW_ROW_{i}),IF(#Final == {j},$,CALL(#HIDE_ROW_{i})))
IF(#Final < {j},S,$)
@IF(#TF >= {i},$,V(2,0))

#Check{i}=X,1,S
IF(#FloorLowerLimit{i} == 0,S,$)
IF(#Cost{i} != 0 && #Final == {j} ,E(0,@Final,{i})CALL(#SHOW_ROW_{i}),$)


##end



#RPTFG=A,1,S
</sub>
